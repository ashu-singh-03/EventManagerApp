@model List<EventManager.Application.DTOs.ScanDtos.ScanLogDto>

<div class="table-responsive">
    <table id="scanLogTable" class="table table-hover table-sm" style="width:100%">
        <thead>
            <tr>
                <th>Ticket ID</th>
                <th>Holder Name</th>
                <th>Access Point</th>
                <th>Scan Time</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var scan in Model)
                {
                    <tr>
                        <td><strong>@scan.TicketId</strong></td>
                        <td>@scan.HolderName</td>
                        <td>@scan.AccessPoint</td>
                        <td><small class="text-muted">@scan.ScanTime</small></td>
                        <td>
                            @if (scan.Status?.ToLower() == "valid")
                            {
                                <span class="badge bg-success">✓ Valid</span>
                            }
                            else if (scan.Status?.ToLower() == "invalid")
                            {
                                <span class="badge bg-danger">✗ Invalid</span>
                            }
                            else if (scan.Status?.ToLower() == "duplicate")
                            {
                                <span class="badge bg-warning">↻ Duplicate</span>
                            }
                            else if (scan.Status?.ToLower() == "invalid_access")
                            {
                                <span class="badge bg-danger">✗ No Access</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@scan.Status</span>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        No scan data available
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>