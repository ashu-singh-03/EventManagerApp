@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Admin Scan Log";
    var accessPointId = ViewBag.AccessPointId as int?;
    var eventId = ViewBag.EventId;
}

<style>
    /* Success/Error Message Styles */
    .alert-toast {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
        min-width: 300px;
        animation: slideInRight 0.3s ease-out;
    }

    .alert-success {
        background: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }

    .alert-danger {
        background: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    .alert-warning {
        background: #fff3cd;
        border-color: #ffeaa7;
        color: #856404;
    }

    .alert-info {
        background: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
    }

    @@keyframes slideInRight {
        from {
            transform: translateX(100%);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @@keyframes fadeOut {
        from {
            opacity: 1;
        }

        to {
            opacity: 0;
        }
    }

    /* Table Styles */
    .scan-table {
        font-size: 14px;
    }

        .scan-table th {
            background: #f8f9fa;
            font-weight: 600;
            color: #495057;
            border-bottom: 2px solid #dee2e6;
        }

        .scan-table td {
            vertical-align: middle;
        }

    .status-badge {
        font-size: 0.75rem;
        padding: 4px 8px;
        border-radius: 4px;
    }

    .badge-valid {
        background: #28a745;
        color: white;
    }

    .badge-invalid {
        background: #dc3545;
        color: white;
    }

    .badge-duplicate {
        background: #ffc107; /* CORRECT: This is the orange/yellow color for duplicates */
        color: #212529;
    }

    .badge-invalid_access {
        background: #6c757d;
        color: white;
    }

    .badge-secondary {
        background: #6c757d;
        color: white;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }
</style>
<div class="container-fluid">
    <!-- Toast Container for Messages -->
    <div id="toastContainer"></div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-history me-2"></i>Admin Scan Log
                    </h4>
                </div>

                <div class="card-body">
                    <!-- Filter Section -->
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-filter"></i>
                                </span>
                                @await Component.InvokeAsync("CommonDropdown", new {
                                id = "accessPoint",
                                                                flag = "ACCESS_POINT",
                                                                placeholder = "Select Access Point",
                                                                eventId = eventId,
                                                                selectedValue = accessPointId
                                                                })
                                <button class="btn btn-primary" type="button" id="btnLoad">
                                    <i class="fas fa-search me-2"></i>Load Scan Log
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="btn-group">
                                <button class="btn btn-outline-secondary" id="btnRefresh">
                                    <i class="fas fa-redo me-1"></i>Refresh
                                </button>
                                <button class="btn btn-outline-primary" id="btnExport">
                                    <i class="fas fa-file-export me-1"></i>Export
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Statistics Cards -->
                    <div class="row mb-4">
                        <div class="col-xl-3 col-md-6 mb-3">
                            <div class="card border-primary">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="text-muted mb-1">Total Scans</h6>
                                            <h3 id="totalScans" class="text-primary">0</h3>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-scan fa-2x text-primary opacity-50"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6 mb-3">
                            <div class="card border-success">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="text-muted mb-1">Valid Scans</h6>
                                            <h3 id="validScans" class="text-success">0</h3>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-check-circle fa-2x text-success opacity-50"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6 mb-3">
                            <div class="card border-danger">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="text-muted mb-1">Invalid Scans</h6>
                                            <h3 id="invalidScans" class="text-danger">0</h3>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-times-circle fa-2x text-danger opacity-50"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6 mb-3">
                            <div class="card border-warning">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="text-muted mb-1">Duplicate Scans</h6>
                                            <h3 id="duplicateScans" class="text-warning">0</h3>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-redo fa-2x text-warning opacity-50"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Scan Log Table -->
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-list me-2"></i>Scan Log Records
                            </h5>
                        </div>
                        <div class="card-body p-0 position-relative">
                            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                                <div class="text-center">
                                    <div class="spinner-border text-primary"></div>
                                    <p class="mt-2">Loading scan log...</p>
                                </div>
                            </div>

                            <div id="scanLogContainer">
                                <div class="text-center text-muted py-5">
                                    <i class="fas fa-filter fa-3x mb-3 opacity-50"></i>
                                    <h4>No Access Point Selected</h4>
                                    <p>Please select an access point to view scan records</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let dataTable = null;

            // Load ALL scan data by default on page load (NO access point required)
            loadAllScanData();

            // Load button click - OPTIONAL filtering
            $('#btnLoad').click(function () {
                var selectedId = $('#accessPoint').val();
                if (!selectedId) {
                    // If no access point selected, show all data
                    loadAllScanData();
                    showMessage('Showing all scan data', 'info');
                } else {
                    // Load filtered data (OPTIONAL filter)
                    loadFilteredScanData(selectedId);
                }
            });

            // Access point dropdown change - OPTIONAL filtering
            $('#accessPoint').change(function () {
                var selectedId = $(this).val();
                if (selectedId) {
                    loadFilteredScanData(selectedId);
                } else {
                    // If "Select Access Point" is chosen, show all data
                    loadAllScanData();
                }
            });

            // Refresh button
            $('#btnRefresh').click(function () {
                var currentId = $('#accessPoint').val();
                if (currentId) {
                    loadFilteredScanData(currentId);
                    showMessage('Filtered scan data refreshed', 'success');
                } else {
                    loadAllScanData();
                    showMessage('All scan data refreshed', 'success');
                }
            });

            // Function to load ALL scan data (no filter - DEFAULT)
            function loadAllScanData() {
                // Update URL to remove filter
                history.replaceState({}, '', window.location.pathname);

                // Show loading
                $('#loadingOverlay').show();
                $('#scanLogContainer').html('');

                // Load ALL scan data (pass 0 for all data)
                $.ajax({
                    url: '/QrConfiguration/GetScanLog',
                    type: 'GET',
                    data: { accessPointId: 0 }, // 0 means load ALL data
                    success: function (response) {
                        $('#loadingOverlay').hide();

                        if (response.success) {
                            if (response.data && response.data.length > 0) {
                                buildScanTable(response.data);
                                showMessage('Loaded all scan data (' + response.data.length + ' records)', 'success');
                            } else {
                                $('#scanLogContainer').html(`
                                    <div class="text-center text-muted py-5">
                                        <i class="fas fa-database fa-3x mb-3 opacity-50"></i>
                                        <h4>No Scan Data Found</h4>
                                        <p>No scan records available for this event</p>
                                    </div>
                                `);
                                showMessage('No scan data found', 'info');
                            }

                            // Load statistics for ALL data
                            loadAllStatistics();
                        } else {
                            $('#scanLogContainer').html(`
                                <div class="alert alert-danger m-4">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    ${response.message || 'Failed to load scan data'}
                                </div>
                            `);
                            showMessage(response.message || 'Error loading scan data', 'error');
                        }
                    },
                    error: function (xhr) {
                        $('#loadingOverlay').hide();
                        $('#scanLogContainer').html(`
                            <div class="alert alert-danger m-4">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Server error. Please try again.
                            </div>
                        `);
                        showMessage('Server error. Please try again.', 'error');
                    }
                });
            }

            // Function to load FILTERED scan data (when access point is selected - OPTIONAL)
            function loadFilteredScanData(accessPointId) {
                // Update URL with filter
                history.replaceState({}, '', '?accessPointId=' + accessPointId);

                // Show loading
                $('#loadingOverlay').show();
                $('#scanLogContainer').html('');

                // Load filtered scan data
                $.ajax({
                    url: '/QrConfiguration/GetScanLog',
                    type: 'GET',
                    data: { accessPointId: accessPointId },
                    success: function (response) {
                        $('#loadingOverlay').hide();

                        if (response.success) {
                            if (response.data && response.data.length > 0) {
                                buildScanTable(response.data);
                                showMessage('Loaded ' + response.data.length + ' records for selected access point', 'success');
                                $('#recordCount').text(response.data.length + ' records (Filtered)');
                            } else {
                                $('#scanLogContainer').html(`
                                    <div class="text-center text-muted py-5">
                                        <i class="fas fa-database fa-3x mb-3 opacity-50"></i>
                                        <h4>No Scan Data Found</h4>
                                        <p>No scan records available for this access point</p>
                                    </div>
                                `);
                                showMessage('No scan data found for selected access point', 'info');
                            }

                            // Load statistics for filtered data
                            loadFilteredStatistics(accessPointId);
                        } else {
                            $('#scanLogContainer').html(`
                                <div class="alert alert-danger m-4">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    ${response.message || 'Failed to load scan log'}
                                </div>
                            `);
                            showMessage(response.message || 'Error loading scan log', 'error');
                        }
                    },
                    error: function (xhr) {
                        $('#loadingOverlay').hide();
                        $('#scanLogContainer').html(`
                            <div class="alert alert-danger m-4">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Server error. Please try again.
                            </div>
                        `);
                        showMessage('Server error. Please try again.', 'error');
                    }
                });
            }

            // Function to load statistics for ALL access points
            function loadAllStatistics() {
                $.ajax({
                    url: '/QrConfiguration/GetStats',
                    type: 'GET',
                    data: { accessPointId: 0 }, // 0 means ALL access points
                    success: function (response) {
                        if (response.success) {
                            updateStatistics(response);
                        } else {
                            // If stats fail, show zeros
                            updateStatistics({
                                totalScans: 0,
                                validScans: 0,
                                invalidScans: 0,
                                duplicateScans: 0
                            });
                        }
                    },
                    error: function () {
                        updateStatistics({
                            totalScans: 0,
                            validScans: 0,
                            invalidScans: 0,
                            duplicateScans: 0
                        });
                    }
                });
            }

            // Function to load statistics for filtered access point
            function loadFilteredStatistics(accessPointId) {
                $.ajax({
                    url: '/QrConfiguration/GetStats',
                    type: 'GET',
                    data: { accessPointId: accessPointId },
                    success: function (response) {
                        if (response.success) {
                            updateStatistics(response);
                        } else {
                            updateStatistics({
                                totalScans: 0,
                                validScans: 0,
                                invalidScans: 0,
                                duplicateScans: 0
                            });
                        }
                    },
                    error: function () {
                        updateStatistics({
                            totalScans: 0,
                            validScans: 0,
                            invalidScans: 0,
                            duplicateScans: 0
                        });
                    }
                });
            }

            // Function to show messages
            function showMessage(message, type = 'info') {
                // Remove existing toasts
                $('.alert-toast').remove();

                var icon = '';
                switch(type) {
                    case 'success': icon = '<i class="fas fa-check-circle me-2"></i>'; break;
                    case 'error': icon = '<i class="fas fa-times-circle me-2"></i>'; break;
                    case 'warning': icon = '<i class="fas fa-exclamation-triangle me-2"></i>'; break;
                    default: icon = '<i class="fas fa-info-circle me-2"></i>';
                }

                var toastHtml = `
                    <div class="alert alert-${type} alert-dismissible fade show alert-toast" role="alert">
                        <div class="d-flex align-items-center">
                            ${icon}
                            <strong>${message}</strong>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;

                $('#toastContainer').append(toastHtml);

                // Auto remove after 5 seconds
                setTimeout(function() {
                    $('.alert-toast').alert('close');
                }, 5000);
            }

            // Build scan table
            function buildScanTable(data) {
                var tableHtml = `
                    <div class="table-responsive">
                        <table id="scanLogTable" class="table table-hover scan-table mb-0">
                            <thead>
                                <tr>
                                    <th>Event Name</th>
                                    <th>Access Point</th>
                                    <th>Event Date</th>
                                    <th>Participant Name</th>
                                    <th>Scan Time</th>
                                    <th>Status</th>
                                    <th>Message</th>
                                </tr>
                            </thead>
                            <tbody>
                `;

                data.forEach(function(row) {
                    var status = row.Status || '';
                    var statusClass = '';

                    switch(status.toLowerCase()) {
                        case 'valid': statusClass = 'badge-valid'; break;
                        case 'invalid': statusClass = 'badge-invalid'; break;
                        case 'duplicate': statusClass = 'badge-duplicate'; break;
                        case 'invalid_access': statusClass = 'badge-invalid_access'; break;
                        default: statusClass = 'badge-secondary';
                    }

                    tableHtml += `
                        <tr>
                            <td>${row['Event Name'] || '-'}</td>
                            <td>${row['Access Point'] || '-'}</td>
                            <td>${row['Event Date'] || '-'}</td>
                            <td>${row['Participant Name'] || '-'}</td>
                            <td>${row['Scan Time'] || '-'}</td>
                            <td><span class="status-badge ${statusClass}">${status}</span></td>
                            <td><small class="text-muted">${row['Message'] || '-'}</small></td>
                        </tr>
                    `;
                });

                tableHtml += `
                            </tbody>
                        </table>
                    </div>
                `;

                $('#scanLogContainer').html(tableHtml);

                // Initialize DataTable
                if ($.fn.DataTable.isDataTable('#scanLogTable')) {
                    dataTable.destroy();
                }

                dataTable = $('#scanLogTable').DataTable({
                    pageLength: 10,
                    order: [[4, 'desc']], // Sort by Scan Time (column index 4)
                    responsive: true,
                    language: {
                        search: "Search scans:",
                        lengthMenu: "Show _MENU_ entries",
                        info: "Showing _START_ to _END_ of _TOTAL_ entries"
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        {
                            extend: 'excel',
                            text: '<i class="fas fa-file-excel me-1"></i> Excel',
                            className: 'btn btn-sm btn-outline-secondary'
                        }
                    ]
                });
            }

            // Update statistics
            function updateStatistics(stats) {
                $('#totalScans').text(stats.totalScans || 0);
                $('#validScans').text(stats.validScans || 0);
                $('#invalidScans').text(stats.invalidScans || 0);
                $('#duplicateScans').text(stats.duplicateScans || 0);
            }

            // Export button
            $('#btnExport').click(function() {
                if (dataTable) {
                    dataTable.button('.buttons-csv').trigger();
                    showMessage('Export started', 'success');
                } else {
                    showMessage('No data to export', 'warning');
                }
            });
        });
    </script>
}