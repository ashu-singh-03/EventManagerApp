@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Attendee Management";
}

<style>
    :root {
        --primary: #FFC107;
        --primary-dark: #FFA000;
        --primary-light: #FFECB3;
        --secondary: #212121;
        --light: #FFFDE7;
        --dark: #212121;
        --gray: #757575;
        --light-gray: #F5F5F5;
        --border: #E0E0E0;
        --danger: #D32F2F;
        --success: #388E3C;
        --warning: #F57C00;
        --info: #1976D2;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        background-color: var(--light);
        color: var(--dark);
        line-height: 1.6;
        font-size: 14px;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 15px;
    }

    /* ALERT STYLES - PROFESSIONAL */
    .alert-area {
        position: fixed;
        top: 20px;
        right: 20px;
        width: 400px;
        z-index: 9999;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .alert {
        border-radius: 10px;
        padding: 18px 20px;
        border: 1px solid transparent;
        display: flex;
        align-items: flex-start;
        animation: slideInRight 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        backdrop-filter: blur(10px);
        transition: transform 0.3s ease, opacity 0.3s ease;
    }

        .alert:hover {
            transform: translateX(-5px);
        }

    .alert-success {
        background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
        border-color: #b1d8b7;
        color: #155724;
        border-left: 5px solid #28a745;
    }

    .alert-danger {
        background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
        border-color: #f1b0b7;
        color: #721c24;
        border-left: 5px solid #dc3545;
    }

    .alert-icon {
        font-size: 24px;
        margin-right: 15px;
        margin-top: 2px;
        flex-shrink: 0;
    }

    .alert-content {
        flex: 1;
        min-width: 0;
    }

    .alert-title {
        font-weight: 700;
        font-size: 16px;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .alert-message {
        font-size: 14px;
        line-height: 1.5;
        margin-bottom: 8px;
    }

    .alert-stats {
        display: flex;
        gap: 10px;
        margin-bottom: 12px;
        flex-wrap: wrap;
    }

    .stat-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .stat-success {
        background-color: rgba(40, 167, 69, 0.15);
        color: #155724;
    }

    .stat-secondary {
        background-color: rgba(108, 117, 125, 0.15);
        color: #383d41;
    }

    .stat-danger {
        background-color: rgba(220, 53, 69, 0.15);
        color: #721c24;
    }

    .alert-actions {
        margin-top: 8px;
    }

    .btn-download-error {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        background-color: rgba(220, 53, 69, 0.1);
        color: #dc3545;
        border: 1px solid #dc3545;
        border-radius: 6px;
        font-size: 13px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .btn-download-error:hover {
            background-color: #dc3545;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.2);
        }

    .btn-close-alert {
        background: none;
        border: none;
        color: inherit;
        opacity: 0.7;
        cursor: pointer;
        font-size: 18px;
        padding: 0;
        margin-left: 10px;
        transition: opacity 0.3s ease;
    }

        .btn-close-alert:hover {
            opacity: 1;
        }

    .no-error-report {
        font-size: 13px;
        color: var(--gray);
        font-style: italic;
        padding: 4px 0;
    }

    @@keyframes slideInRight {
        from {
            transform: translateX(100%);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @@keyframes fadeOut {
        from {
            opacity: 1;
        }

        to {
            opacity: 0;
        }
    }

    /* Modal Error Styles */
    .modal-error-area {
        display: none;
        margin: 15px 0;
    }

    .modal-error {
        background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
        border: 1px solid #f1b0b7;
        border-left: 5px solid #dc3545;
        color: #721c24;
        border-radius: 8px;
        padding: 15px;
        margin: 10px 0;
    }

    /* REST OF YOUR EXISTING STYLES (unchanged) */
    header {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: var(--dark);
        padding: 15px 0;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .menu-bar {
        display: flex;
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 20px;
        box-shadow: 0 1px 5px rgba(0, 0, 0, 0.05);
    }

    .menu-itemlocal {
        flex: 1;
        text-align: center;
        padding: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 600;
        color: var(--gray);
        font-size: 0.9rem;
        border-right: 1px solid var(--border);
    }

        .menu-itemlocal:last-child {
            border-right: none;
        }

        .menu-itemlocal.active {
            background-color: var(--primary);
            color: var(--dark);
        }

        .menu-itemlocal:hover:not(.active) {
            background-color: var(--primary-light);
        }

    .content-section {
        display: none;
        background-color: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 1px 5px rgba(0,0,0,0.05);
        margin-bottom: 20px;
        min-height: 600px;
    }

        .content-section.active {
            display: block;
        }

    .table-container {
        overflow-x: auto;
        border-radius: 8px;
        box-shadow: 0 1px 5px rgba(0,0,0,0.05);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
        font-size: 0.85rem;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid var(--border);
    }

    th {
        background-color: var(--light-gray);
        font-weight: 600;
        color: var(--dark);
    }

    tr:hover {
        background-color: var(--primary-light);
    }

    .btn {
        padding: 10px 18px;
        border: none;
        border-radius: 5px;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: var(--primary);
        color: var(--dark);
    }

        .btn-primary:hover {
            background-color: var(--primary-dark);
        }

    .btn-secondary {
        background-color: var(--light-gray);
        color: var(--dark);
    }

        .btn-secondary:hover {
            background-color: var(--border);
        }

    .btn-danger {
        background-color: var(--danger);
        color: white;
    }

    .btn-warning {
        background-color: var(--warning);
        color: white;
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 0.8rem;
    }

    .form-row {
        display: flex;
        gap: 15px;
        margin-bottom: 15px;
    }

    .form-col {
        flex: 1;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: var(--dark);
        font-size: 0.9rem;
    }

    input, select, textarea {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid var(--border);
        border-radius: 5px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

        input:focus, select:focus, textarea:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 2px rgba(255, 193, 7, 0.2);
        }

    .action-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid var(--border);
    }

    .section-title {
        font-size: 1.2rem;
        margin-bottom: 15px;
        color: var(--dark);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1000;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

        .modal.show {
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 1;
        }

    .modal-content {
        background-color: white;
        width: 90%;
        max-width: 900px;
        max-height: 90vh;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        display: flex;
        flex-direction: column;
    }

    .modal-header {
        padding: 20px;
        border-bottom: 1px solid var(--border);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-title {
        margin: 0;
        font-size: 1.3rem;
        color: var(--dark);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .modal-close {
        background: none;
        border: none;
        font-size: 28px;
        cursor: pointer;
        color: var(--gray);
        line-height: 1;
        transition: color 0.3s ease;
    }

        .modal-close:hover {
            color: var(--dark);
        }

    .modal-body {
        padding: 20px;
        overflow-y: auto;
        flex: 1;
    }

    .modal-footer {
        padding: 15px 20px;
        border-top: 1px solid var(--border);
        display: flex;
        justify-content: space-between;
        gap: 10px;
    }

    /* Upload Area Styles */
    .upload-area {
        border: 2px dashed var(--border);
        border-radius: 8px;
        padding: 40px 20px;
        text-align: center;
        margin: 20px 0;
        cursor: pointer;
        transition: all 0.3s ease;
        background-color: var(--light-gray);
    }

        .upload-area:hover,
        .upload-area.drag-over {
            border-color: var(--primary);
            background-color: var(--primary-light);
        }

    .upload-icon {
        font-size: 48px;
        color: var(--gray);
        margin-bottom: 15px;
    }

    .upload-area h3 {
        margin: 10px 0;
        color: var(--dark);
    }

    .upload-area p {
        margin: 10px 0;
        color: var(--gray);
    }

    /* Preview Table Styles */
    #previewTable {
        font-size: 0.8rem;
    }

        #previewTable th {
            background-color: var(--light-gray);
            position: sticky;
            top: 0;
        }

    .text-center {
        text-align: center;
    }

    .text-danger {
        color: var(--danger);
    }

    .is-invalid {
        border-color: var(--danger) !important;
    }

    .loading-text {
        text-align: center;
        padding: 20px;
        color: var(--gray);
        font-style: italic;
    }
    /* DataTable specific styles */
    #previewTable_wrapper .dataTables_scrollBody {
        max-height: 400px !important;
        min-height: 200px !important;
    }

    .dataTables_wrapper {
        margin: 10px 0;
    }

    .dataTables_length,
    .dataTables_filter {
        margin-bottom: 10px;
    }

    .dataTables_info {
        margin-top: 10px;
    }

    .dataTables_paginate {
        margin-top: 10px;
    }

    table.dataTable {
        margin-top: 0 !important;
        margin-bottom: 10px !important;
        font-size: 0.85rem;
    }

    .dataTables_processing {
        background-color: rgba(255, 193, 7, 0.8) !important;
        color: #212121 !important;
        border-radius: 8px !important;
        padding: 20px !important;
        font-weight: bold !important;
        border: none !important;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1) !important;
    }

    /* Ensure table header stays visible */
    #previewTable thead th {
        position: sticky;
        top: 0;
        background-color: var(--light-gray);
        z-index: 10;
    }

    /* Style for DataTable buttons and controls */
    .dataTables_filter input {
        padding: 8px 12px;
        border: 1px solid var(--border);
        border-radius: 5px;
        width: 200px;
    }

    .dataTables_length select {
        padding: 6px 12px;
        border: 1px solid var(--border);
        border-radius: 5px;
    }

    .paginate_button {
        padding: 6px 12px !important;
        margin: 0 2px !important;
        border: 1px solid var(--border) !important;
        border-radius: 4px !important;
    }

        .paginate_button.current {
            background-color: var(--primary) !important;
            color: var(--dark) !important;
            border-color: var(--primary-dark) !important;
        }

        .paginate_button:hover {
            background-color: var(--primary-light) !important;
            color: var(--dark) !important;
        }
        
    /* Attendees List DataTable Styles */
    #attendeesTable_wrapper {
        margin-top: 15px;
    }

    #attendeesTable_wrapper .dataTables_filter {
        margin-bottom: 15px;
    }

    #attendeesTable_wrapper .dataTables_length {
        margin-bottom: 15px;
    }

    /* Make sure action buttons don't wrap */
    #attendeesTable td:last-child {
        white-space: nowrap;
    }
</style>


<div class="container-fluid">
    <div class="card">
        <div class="card-body p-4 p-lg-5">

        <div class="menu-bar">
            <div class="menu-itemlocal active" data-section="manage-attendees">Manage Attendees</div>
            <div class="menu-itemlocal" data-section="attendees-list">Attendees List</div>
        </div>

        <!-- Global Alert Area -->
        <div class="alert-area"></div>

        <!-- Manage Attendees Section -->
        <div class="content-section active" id="manage-attendees">
            <div class="action-bar">
                <h2 class="section-title"><i class="fas fa-user-edit"></i> Manage Attendees</h2>
                <div>
                    <button class="btn btn-primary" id="bulkUploadBtn">
                        <i class="fas fa-file-upload"></i> Bulk Upload
                    </button>
                </div>
            </div>
            <form id="attendeeForm">
                <input type="hidden" id="EventId" name="EventId" value="@ViewBag.EventId" />

                <div class="form-row">
                    <div class="form-col">
                        <label for="firstName">First Name *</label>
                        <input type="text" id="firstName" name="FirstName" required>
                    </div>
                    <div class="form-col">
                        <label for="lastName">Last Name *</label>
                        <input type="text" id="lastName" name="LastName" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-col">
                        <label for="email">Email Address *</label>
                        <input type="email" id="email" name="Email" required>
                    </div>
                    <div class="form-col">
                        <label for="phone">Phone Number</label>
                        <input type="tel" id="phone" name="Phone">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-col">
                        <label for="company">Company</label>
                        <input type="text" id="company" name="Company">
                    </div>
                    <div class="form-col">
                        <label for="department">Department</label>
                        <input type="text" id="department" name="Department">
                    </div>
                </div>

                <div class="form-group">
                    <label for="notes">Additional Notes</label>
                    <textarea id="notes" name="Notes" rows="2"></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save Attendee</button>
                </div>
            </form>
        </div>

        <!-- Attendees List Section -->
        <div class="content-section" id="attendees-list">
            <h2 class="section-title"><i class="fas fa-list-alt"></i> Attendees List</h2>
            <div class="table-container" id="attendeesTableContainer">
                <table class="table display nowrap" id="attendeesTable" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Company</th>
                            <th>Department</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="attendeesTableBody">
                        <!-- Data will be loaded dynamically -->
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>
</div>

<!-- Bulk Upload Modal -->
<div class="modal" id="bulkUploadModal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title"><i class="fas fa-file-excel"></i> Excel Bulk Upload</h3>
            <button class="modal-close" id="modalClose">&times;</button>
        </div>
        <div class="modal-body">
            <p>Upload an Excel file to create or update multiple attendees at once.</p>

            <div class="upload-area" id="dropZone">
                <div class="upload-icon">
                    <i class="fas fa-file-upload"></i>
                </div>
                <h3>Drag & Drop your Excel file here</h3>
                <p>or</p>
                <button class="btn btn-primary" id="browseBtn">
                    <i class="fas fa-folder-open"></i> Browse Files
                </button>
                <input type="file" id="fileInput" accept=".xlsx, .xls, .csv" style="display: none;">
            </div>

            <!-- Error Message Area in Modal -->
            <div id="modalErrorArea" class="modal-error-area" style="display: none;">
                <div class="modal-error">
                    <div style="display: flex; align-items: flex-start;">
                        <i class="fas fa-exclamation-triangle" style="font-size: 24px; margin-right: 15px; margin-top: 2px; flex-shrink: 0;"></i>
                        <div style="flex: 1; min-width: 0;">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 5px;">
                                <strong style="font-size: 16px;">Import Failed</strong>
                                <button type="button" id="closeModalError" style="background: none; border: none; color: inherit; opacity: 0.7; cursor: pointer; font-size: 18px;">&times;</button>
                            </div>
                            <div id="modalErrorMessage" style="font-size: 14px; margin-bottom: 8px;"></div>
                            <div id="modalErrorStats" style="display: flex; gap: 10px; margin-bottom: 12px; flex-wrap: wrap;"></div>
                            <div id="modalErrorActions" style="margin-top: 8px;"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="attendee-list">
                <h3 class="section-title"><i class="fas fa-list"></i> Preview</h3>
                <div class="table-container">
                    <table id="previewTable">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Company</th>
                                <th>Department</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Preview data will be inserted here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" id="downloadTemplateBtn">
                <i class="fas fa-download"></i> Download Template
            </button>
            <button class="btn btn-primary" id="modalUploadBtn">
                <i class="fas fa-upload"></i> Upload & Process
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable variables
            let previewDataTable = null;
            let attendeesDataTable = null;

            // Initialize Preview DataTable (empty initially)
            function initializeDataTable() {
                // Destroy existing DataTable if it exists
                if ($.fn.DataTable.isDataTable('#previewTable')) {
                    previewDataTable.destroy();
                    $('#previewTable').empty();
                }

                // Recreate table structure
                $('#previewTable').html(`
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Company</th>
                            <th>Department</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                `);

                // Initialize new DataTable
                previewDataTable = $('#previewTable').DataTable({
                    paging: true,
                    pageLength: 10,
                    lengthMenu: [10, 25, 50, 100],
                    searching: true,
                    ordering: true,
                    info: true,
                    autoWidth: false,
                    processing: false,
                    language: {
                        processing: '<i class="fas fa-spinner fa-spin fa-2x"></i> Loading...',
                        emptyTable: 'No data available in table',
                        info: 'Showing _START_ to _END_ of _TOTAL_ entries',
                        infoEmpty: 'Showing 0 to 0 of 0 entries',
                        infoFiltered: '(filtered from _MAX_ total entries)',
                        lengthMenu: 'Show _MENU_ entries',
                        search: 'Search:',
                        paginate: {
                            first: 'First',
                            last: 'Last',
                            next: 'Next',
                            previous: 'Previous'
                        }
                    },
                    dom: '<"top"lf>rt<"bottom"ip><"clear">',
                    scrollY: '400px',
                    scrollCollapse: true,
                    order: [[0, 'asc']]
                });
            }

            // Initialize Attendees DataTable
            function initializeAttendeesDataTable() {
                if ($.fn.DataTable.isDataTable('#attendeesTable')) {
                    attendeesDataTable.destroy();
                    $('#attendeesTable tbody').empty();
                }
                
                attendeesDataTable = $('#attendeesTable').DataTable({
                    paging: true,
                    pageLength: 10,
                    lengthMenu: [10, 25, 50, 100],
                    searching: true,
                    ordering: true,
                    info: true,
                    autoWidth: false,
                    responsive: true,
                    language: {
                        processing: '<i class="fas fa-spinner fa-spin fa-2x"></i> Loading...',
                        emptyTable: 'No attendees found',
                        info: 'Showing _START_ to _END_ of _TOTAL_ attendees',
                        infoEmpty: 'Showing 0 to 0 of 0 attendees',
                        infoFiltered: '(filtered from _MAX_ total attendees)',
                        lengthMenu: 'Show _MENU_ attendees',
                        search: 'Search:',
                        paginate: {
                            first: 'First',
                            last: 'Last',
                            next: 'Next',
                            previous: 'Previous'
                        }
                    },
                    dom: '<"top"lf>rt<"bottom"ip><"clear">',
                    columnDefs: [
                        { 
                            targets: 0, // ID column
