            // Alert functions for global alerts
            function showSuccess(message, totalRecords, importedRecords) {
                const alertId = 'alert-' + Date.now();
                const successHtml = `
                    <div id="${alertId}" class="alert alert-success">
                        <i class="fas fa-check-circle alert-icon"></i>
                        <div class="alert-content">
                            <div class="alert-title">
                                <span>Import Successful!</span>
                                <button class="btn-close-alert" onclick="closeAlert('${alertId}')">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="alert-message">${message}</div>
                            <div class="alert-stats">
                                <span class="stat-badge stat-success">
                                    <i class="fas fa-users"></i> Total: ${totalRecords}
                                </span>
                                <span class="stat-badge stat-success">
                                    <i class="fas fa-check-circle"></i> Imported: ${importedRecords}
                                </span>
                            </div>
                        </div>
                    </div>`;
                $('.alert-area').append(successHtml);
                setTimeout(() => closeAlert(alertId), 8000);
            }

            function showError(message, totalRecords, failedRecords, errorFileUrl) {
                const alertId = 'alert-' + Date.now();

                // Convert to numbers
                const totalNum = Number(totalRecords) || 0;
                const failedNum = Number(failedRecords) || 0;

                let errorHtml = `
                    <div id="${alertId}" class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle alert-icon"></i>
                        <div class="alert-content">
                            <div class="alert-title">
                                <span>Import Failed</span>
                                <button class="btn-close-alert" onclick="closeAlert('${alertId}')">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="alert-message">${message || 'Unknown error'}</div>
                            <div class="alert-stats">
                                <span class="stat-badge stat-secondary">
                                    <i class="fas fa-users"></i> Total: ${totalNum}
                                </span>
                                <span class="stat-badge stat-danger">
                                    <i class="fas fa-times-circle"></i> Failed: ${failedNum}
                                </span>
                            </div>`;

                if (errorFileUrl && errorFileUrl !== 'null' && errorFileUrl.trim() !== '') {
                    errorHtml += `
                        <div class="alert-actions">
                            <a href="${errorFileUrl}" class="btn-download-error" target="_blank" download>
                                <i class="fas fa-download"></i> Download Error Report
                            </a>
                        </div>`;
                } else {
                    errorHtml += `
                        <div class="no-error-report">
                            <i class="fas fa-info-circle"></i> No error report available
                        </div>`;
                }

                errorHtml += `</div></div>`;
                $('.alert-area').append(errorHtml);
                setTimeout(() => closeAlert(alertId), 10000);
            }

            window.closeAlert = function(alertId) {
                const alert = $('#' + alertId);
                if (alert.length) {
                    alert.css('animation', 'fadeOut 0.5s ease forwards');
                    setTimeout(() => alert.remove(), 500);
                }
            };

            // Modal error functions
            function showModalError(message, totalRecords, failedRecords, errorFileUrl) {
                const errorArea = $('#modalErrorArea');
                const messageEl = $('#modalErrorMessage');
                const statsEl = $('#modalErrorStats');
                const actionsEl = $('#modalErrorActions');

                // Convert to numbers
                const totalNum = totalRecords || 0;
                const failedNum = failedRecords || 0;

                // Set message
                messageEl.text(message || 'Unknown error');

                // Set stats
                statsEl.html(`
                    <span style="padding: 4px 12px; border-radius: 20px; font-size: 12px; font-weight: 600; display: inline-flex; align-items: center; gap: 5px; background-color: rgba(108, 117, 125, 0.15); color: #383d41;">
                        <i class="fas fa-users"></i> Total: ${totalNum}
                    </span>
                    <span style="padding: 4px 12px; border-radius: 20px; font-size: 12px; font-weight: 600; display: inline-flex; align-items: center; gap: 5px; background-color: rgba(220, 53, 69, 0.15); color: #721c24;">
                        <i class="fas fa-times-circle"></i> Failed: ${failedNum}
                    </span>
                `);

                // Set actions (download link)
                if (errorFileUrl && errorFileUrl !== 'null' && errorFileUrl.trim() !== '' && errorFileUrl !== 'undefined') {
                    actionsEl.html(`
                        <div style="display: flex; gap: 10px; align-items: center;">
                            <a href="${errorFileUrl}" style="display: inline-flex; align-items: center; gap: 8px; padding: 8px 16px; background-color: rgba(220, 53, 69, 0.1); color: #dc3545; border: 1px solid #dc3545; border-radius: 6px; font-size: 13px; font-weight: 600; text-decoration: none; transition: all 0.3s ease;" target="_blank" download>
                                <i class="fas fa-download"></i> Download Error Report
                            </a>
                            <button type="button" class="btn btn-secondary" id="retryUploadBtn" style="padding: 8px 16px; font-size: 13px; border: 1px solid #6c757d; background-color: #f8f9fa; color: #212529; border-radius: 6px; cursor: pointer;">
                                <i class="fas fa-redo"></i> Try Different File
                            </button>
                        </div>
                    `);

                    // Add click handler for retry button
                    setTimeout(() => {
                        $('#retryUploadBtn').off('click').on('click', function(e) {
                            e.preventDefault();
                            e.stopPropagation();
                            hideModalError();
                            fileInput.val('');

                            // Reset drop zone
                            dropZone.html(`
                                <div class="upload-icon"><i class="fas fa-file-upload"></i></div>
                                <h3>Drag & Drop your Excel file here</h3>
                                <p>or</p>
                                <button class="btn btn-primary" id="browseBtn">
                                    <i class="fas fa-folder-open"></i> Browse Files
                                </button>`);

                            // Clear DataTable
                            if (previewDataTable) {
                                previewDataTable.clear().draw();
                            }

                            // Re-attach browse button click event
                            setTimeout(() => {
                                $('#browseBtn').off('click').on('click', function(e) {
                                    e.preventDefault();
                                    e.stopPropagation();
                                    fileInput.click();
                                });
                            }, 100);
                        });
                    }, 100);
                }

                // Show error area
                errorArea.show();
            }

            function hideModalError() {
                $('#modalErrorArea').hide();
                $('#modalErrorMessage').empty();
                $('#modalErrorStats').empty();
                $('#modalErrorActions').empty();
            }

            // Tab switching
            $('.menu-itemlocal').click(function () {
                $('.menu-itemlocal').removeClass('active');
                $(this).addClass('active');
                $('.content-section').removeClass('active');
                $('#' + $(this).data('section')).addClass('active');

                if ($(this).data('section') === 'attendees-list') {
                    // Initialize or reload DataTable
                    if (!attendeesDataTable || !$.fn.DataTable.isDataTable('#attendeesTable')) {
                        initializeAttendeesDataTable();
                    }
                    loadParticipants();
                } else if ($(this).data('section') === 'manage-attendees') {
                    $('#attendeeForm')[0].reset();
                    $('#attendeeForm').removeData('participant-id');
                    $('#attendeeForm button[type="submit"]').text('Save Attendee');
                }
            });

            // Form validation
            $('#attendeeForm').validate({
                rules: {
                    FirstName: { required: true, minlength: 2 },
                    LastName: { required: true, minlength: 2 },
                    Email: { required: true, email: true }
                },
                messages: {
                    FirstName: { required: "First Name is required", minlength: "First Name must be at least 2 characters" },
                    LastName: { required: "Last Name is required", minlength: "Last Name must be at least 2 characters" },
                    Email: { required: "Email Address is required", email: "Please enter a valid email address" }
                },
                errorClass: "text-danger",
                errorPlacement: (error, element) => error.insertAfter(element),
                highlight: (element) => $(element).addClass('is-invalid'),
                unhighlight: (element) => $(element).removeClass('is-invalid'),
                submitHandler: saveParticipant
            });

            // Save participant
            function saveParticipant() {
                const dto = {
                    ParticipantId: $('#attendeeForm').data('participant-id') || 0,
                    EventId: Number($('#EventId').val()) || 0,
                    FirstName: $('#firstName').val(),
                    LastName: $('#lastName').val(),
                    Email: $('#email').val(),
                    Phone: $('#phone').val(),
                    Company: $('#company').val(),
                    Department: $('#department').val(),
                    Notes: $('#notes').val()
                };

                $.ajax({
                    url: '@Url.Action("Save", "Participant")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(dto),
                    success: function () {
                        showSuccess('Participant saved successfully!', 1, 1);
                        $('#attendeeForm')[0].reset();
                        $('#attendeeForm').removeData('participant-id');
                        $('#attendeeForm button[type="submit"]').text('Save Attendee');
                        // Reload attendees DataTable
                        loadParticipants();
                        $('.menu-itemlocal[data-section="attendees-list"]').click();
                    },
                    error: function (xhr) {
                        const errorMessage = xhr.responseJSON?.message || 'Error saving participant';
                        showError(errorMessage, 1, 1);
                    }
                });
            }

            // Load participants
            function loadParticipants() {
                // Show loading state
                if (attendeesDataTable) {
                    attendeesDataTable.clear().draw();
                }
                
                $.ajax({
                    url: '@Url.Action("LoadParticipants", "Participant")',
                    type: 'GET',
                    data: { eventId: $('#EventId').val() },
                    success: function (participants) {
                        // Initialize DataTable if not already initialized
                        if (!attendeesDataTable || !$.fn.DataTable.isDataTable('#attendeesTable')) {
                            initializeAttendeesDataTable();
                        }
                        
                        // Clear existing data
                        attendeesDataTable.clear();
                        
                        if (!participants?.length) {
                            attendeesDataTable.draw();
                            return;
                        }

                        // Add data to DataTable
                        participants.forEach(p => {
                            attendeesDataTable.row.add([
                                p.participantId,
                                `${p.firstName} ${p.lastName}`,
                                p.email || '',
                                p.phone || '',
                                p.company || '',
                                p.department || '',
                                `
                                    <button class="btn btn-warning btn-sm edit-btn" data-id="${p.participantId}">Edit</button>
                                    <button class="btn btn-danger btn-sm delete-btn" data-id="${p.participantId}">Delete</button>
                                `
                            ]);
                        });
                        
                        // Draw the table
                        attendeesDataTable.draw();
                    },
                    error: function (xhr) {
                        showError('Error loading participants', 0, 0);
                        if (attendeesDataTable) {
                            attendeesDataTable.clear().draw();
                        }
                    }
                });
            }

            // Edit participant
            $(document).on('click', '.edit-btn', function () {
                const participantId = $(this).data('id');
                $.ajax({
                    url: '@Url.Action("Details", "Participant")',
                    type: 'GET',
                    data: { id: participantId },
                    success: function (participant) {
                        $('.menu-itemlocal[data-section="manage-attendees"]').click();
                        $('#EventId').val(participant.eventId);
                        $('#firstName').val(participant.firstName);
                        $('#lastName').val(participant.lastName);
                        $('#email').val(participant.email);
                        $('#phone').val(participant.phone);
                        $('#company').val(participant.company);
                        $('#department').val(participant.department);
                        $('#notes').val(participant.notes);
                        $('#attendeeForm').data('participant-id', participant.participantId);
                        $('#attendeeForm button[type="submit"]').text('Update Attendee');
                    },
                    error: function () {
                        showError('Error fetching participant details.', 0, 0);
                    }
                });
            });

            // Delete participant
            $(document).on('click', '.delete-btn', function () {
                if (!confirm('Are you sure you want to delete this participant?')) return;

                const participantId = $(this).data('id');
                $.ajax({
                    url: '@Url.Action("Delete", "Participant")',
                    type: 'POST',
                    data: { id: participantId },
                    success: function () {
                        showSuccess('Participant deleted successfully!', 1, 1);
                        loadParticipants(); // This will refresh the DataTable
                    },
                    error: function (xhr) {
                        showError('Error deleting participant', 1, 1);
                    }
                });
            });

            // Bulk upload modal
            const modal = $('#bulkUploadModal');
            const fileInput = $('#fileInput');
            const dropZone = $('#dropZone');
            const modalUploadBtn = $('#modalUploadBtn');

            // Open/close modal
            $('#bulkUploadBtn').click(() => {
                hideModalError();
                modal.addClass('show');
                // Reset DataTable when opening modal
                initializeDataTable();
            });

            $('#modalClose').click(() => {
                hideModalError();
                modal.removeClass('show');
            });

            modal.click((e) => {
                if ($(e.target).is('#bulkUploadModal')) {
                    hideModalError();
                    modal.removeClass('show');
                }
            });

            // Close modal error button
            $(document).on('click', '#closeModalError', function() {
                hideModalError();
            });

            // Use event delegation for file handling
            $(document).on('click', '#browseBtn', function(e) {
                e.preventDefault();
                e.stopPropagation();
                fileInput.click();
            });

            fileInput.change(handleFileSelect);

            // Drag and drop
            dropZone.on('dragover dragleave drop', function(e) {
                e.preventDefault();
                e.stopPropagation();
                if (e.type === 'dragover') $(this).addClass('drag-over');
                else if (e.type === 'dragleave') $(this).removeClass('drag-over');
                else if (e.type === 'drop') {
                    $(this).removeClass('drag-over');
                    const files = e.originalEvent.dataTransfer.files;
                    if (files.length) {
                        fileInput[0].files = files;
                        handleFileSelect({ target: fileInput[0] });
                    }
                }
            });

            function handleFileSelect(e) {
                const file = e.target.files[0];
                if (!file) return;

                const fileExtension = '.' + file.name.split('.').pop().toLowerCase();
                if (!['.xlsx', '.xls', '.csv'].includes(fileExtension)) {
                    showModalError('Please select a valid Excel file (.xlsx, .xls, .csv)', 0, 0);
                    return;
                }

                // Hide any previous error
                hideModalError();

                dropZone.html(`
                    <div class="upload-icon" style="color: var(--primary);">
                        <i class="fas fa-file-excel"></i>
                    </div>
                    <h3>${file.name}</h3>
                    <p><i class="fas fa-spinner fa-spin"></i> Reading file...</p>
                    <button class="btn btn-secondary" id="changeFileBtn" style="margin-top: 10px;">
                        <i class="fas fa-exchange-alt"></i> Change File
                    </button>`);

                // Clear and show loading in DataTable
                if (previewDataTable) {
                    previewDataTable.clear().draw();
                }

                parseExcelFile(file);
            }

            function parseExcelFile(file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    try {
                        const data = new Uint8Array(e.target.result);
                        const workbook = XLSX.read(data, { type: 'array' });
                        const worksheet = workbook.Sheets[workbook.SheetNames[0]];
                        const jsonData = XLSX.utils.sheet_to_json(worksheet, { header: 1 });

                        if (jsonData.length <= 1) {
                            dropZone.find('p').text(`${(file.size/1024).toFixed(2)} KB • No data rows`);
                            if (previewDataTable) {
                                previewDataTable.clear().draw();
                            }
                            return;
                        }

                        const headers = jsonData[0] || [];
                        const attendeeData = [];

                        for (let i = 1; i < jsonData.length; i++) {
                            const row = jsonData[i];
                            const hasData = row.some(cell => cell?.toString().trim());
                            if (!hasData) continue;

                            const attendee = {
                                firstName: '',
                                lastName: '',
                                email: '',
                                phone: '',
                                company: '',
                                department: '',
                                notes: ''
                            };

                            for (let j = 0; j < headers.length && j < row.length; j++) {
                                const header = (headers[j] || '').toString().toLowerCase();
                                const value = (row[j] || '').toString().trim();
                                if (!value) continue;

                                if (header.includes('first')) attendee.firstName = value;
                                else if (header.includes('last')) attendee.lastName = value;
                                else if (header.includes('email')) attendee.email = value;
                                else if (header.includes('phone')) attendee.phone = value;
                                else if (header.includes('company')) attendee.company = value;
                                else if (header.includes('department') || header.includes('dept')) attendee.department = value;
                                else if (header.includes('note')) attendee.notes = value;
                            }

                            if (attendee.firstName || attendee.lastName || attendee.email) {
                                attendeeData.push(attendee);
                            }
                        }

                        dropZone.find('p').html(`
                            <i class="fas fa-check-circle" style="color: var(--success);"></i>
                            ${(file.size/1024).toFixed(2)} KB • ${attendeeData.length} attendees found`);

                        renderDataTable(attendeeData);

                    } catch (error) {
                        dropZone.find('p').html(`<i class="fas fa-times-circle" style="color: var(--danger);"></i> ${(file.size/1024).toFixed(2)} KB • Error`);
                        showModalError(`Error parsing file: ${error.message}`, 0, 0);
                    }
                };
                reader.onerror = () => {
                    dropZone.find('p').html('<i class="fas fa-times-circle" style="color: var(--danger);"></i> File read error');
                    showModalError('Could not read the file. Please try again.', 0, 0);
                };
                reader.readAsArrayBuffer(file);
            }

            function renderDataTable(data) {
                if (!previewDataTable) {
                    initializeDataTable();
                }

                // Clear existing data
                previewDataTable.clear();

                if (!data?.length) {
                    previewDataTable.draw();
                    return;
                }

                // Add data to DataTable
                data.forEach(row => {
                    previewDataTable.row.add([
                        escapeHtml(row.firstName || ''),
                        escapeHtml(row.lastName || ''),
                        escapeHtml(row.email || ''),
                        escapeHtml(row.phone || ''),
                        escapeHtml(row.company || ''),
                        escapeHtml(row.department || ''),
                        escapeHtml(row.notes || '')
                    ]);
                });

                // Draw the table
                previewDataTable.draw();

                // Update the info text to show total count
                updateDataTableInfo(data.length);
            }

            // Function to update DataTable info with correct count
            function updateDataTableInfo(totalCount) {
                // Wait for DataTable to update
                setTimeout(() => {
                    // Get the current info element
                    const infoElement = $('.dataTables_info');
                    if (infoElement.length) {
                        if (totalCount === 0) {
                            infoElement.text('Showing 0 to 0 of 0 entries');
                        } else {
                            // Get current page info from DataTable
                            const pageInfo = previewDataTable.page.info();
                            const start = pageInfo.start + 1;
                            const end = pageInfo.end;

                            infoElement.text(`Showing ${start} to ${end} of ${totalCount} attendees`);
                        }
                    }
                }, 100);
            }

            function escapeHtml(text) {
                if (!text) return '';
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            // Download template
            $(document).on('click', '#downloadTemplateBtn', function(e) {
                e.preventDefault();
                window.location.href = '@Url.Action("DownloadTemplate", "Participant")';
            });

            // Upload process
            modalUploadBtn.click(function () {
                const file = fileInput[0].files[0];

                if (!file) {
                    showModalError('Please select a file first.', 0, 0);
                    return;
                }

                const fileExtension = '.' + file.name.split('.').pop().toLowerCase();
                if (!['.xlsx', '.xls', '.csv'].includes(fileExtension)) {
                    showModalError('Please select a valid Excel file (.xlsx, .xls, .csv)', 0, 0);
                    return;
                }

                const originalText = modalUploadBtn.html();
                modalUploadBtn
                    .html('<i class="fas fa-spinner fa-spin"></i> Uploading...')
                    .prop('disabled', true);

                hideModalError();

                const formData = new FormData();
                formData.append('file', file);
                formData.append('EventId', $('#EventId').val());

                $.ajax({
                    url: '@Url.Action("ImportExcel", "Participant")',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,

                    // Handle both success and error responses
                    success: function (response) {
                        hideModalError();
                        modal.removeClass('show');

                        if (response.success) {
                            showSuccess(
                                response.message || 'File uploaded successfully!',
                                response.totalRecords || 0,
                                response.importedRecords || 0
                            );
                            loadParticipants();
                        } else {
                            // Server returned success: false with error details
                            showModalError(
                                response.message || 'Import failed.',
                                response.totalRecords || 0,
                                response.failedRecords || 0,
                                response.errorFileUrl
                            );
                            // Don't close modal on validation errors
                            modal.addClass('show');
                        }
                    },

                    error: function (xhr, status, error) {
                        console.log("AJAX Error Status:", status);
                        console.log("AJAX Error:", error);
                        console.log("Response:", xhr.responseJSON);

                        // Check if it's a 400 error with JSON response
                        if (xhr.status === 400 && xhr.responseJSON) {
                            // This is actually a validation error from server
                            showModalError(
                                xhr.responseJSON.message || 'Validation failed',
                                xhr.responseJSON.totalRecords || 0,
                                xhr.responseJSON.failedRecords || 0,
                                xhr.responseJSON.errorFileUrl
                            );
                            // Keep modal open to show errors
                            modal.addClass('show');
                        }
                        // Check for 404 (endpoint not found)
                        else if (xhr.status === 404) {
                            showModalError(
                                'Server endpoint not found. Please check the URL.',
                                0, 0
                            );
                            modal.addClass('show');
                        }
                        // Check for 500 (server error)
                        else if (xhr.status === 500) {
                            showModalError(
                                'Server error occurred. Please try again later.',
                                0, 0
                            );
                            modal.addClass('show');
                        }
                        // Other errors
                        else {
                            showModalError(
                                'Error during import: ' + (error || 'Unknown error'),
                                0, 0
                            );
                            modal.addClass('show');
                        }
                    },

                    complete: function () {
                        modalUploadBtn.html(originalText).prop('disabled', false);
                    }
                });
            });

            // Event delegation for change file button
            $(document).on('click', '#changeFileBtn', function(e) {
                e.preventDefault();
                e.stopPropagation();

                hideModalError();
                fileInput.val('');
                
                // Reset drop zone
                dropZone.html(`
                    <div class="upload-icon"><i class="fas fa-file-upload"></i></div>
                    <h3>Drag & Drop your Excel file here</h3>
                    <p>or</p>
                    <button class="btn btn-primary" id="browseBtn">
                        <i class="fas fa-folder-open"></i> Browse Files
                    </button>
                    <input type="file" id="fileInput" accept=".xlsx, .xls, .csv" style="display: none;">`);

                // Clear DataTable
                if (previewDataTable) {
                    previewDataTable.clear().draw();
                    // Reset DataTable info text
                    setTimeout(() => {
                        $('.dataTables_info').text('Showing 0 to 0 of 0 entries');
                    }, 100);
                }

                // IMPORTANT: Re-attach ALL event handlers
                setTimeout(() => {
                    // Re-attach browse button click
                    $('#browseBtn').off('click').on('click', function(e) {
                        e.preventDefault();
                        e.stopPropagation();
                        fileInput.click();
                    });
                    
                    // Re-attach file input change event
                    fileInput.off('change').on('change', handleFileSelect);
                    
                    // Re-attach drag and drop events to the NEW drop zone element
                    dropZone.off('dragover dragleave drop')
                        .on('dragover', function(e) {
                            e.preventDefault();
                            e.stopPropagation();
                            $(this).addClass('drag-over');
                        })
                        .on('dragleave', function(e) {
                            e.preventDefault();
                            e.stopPropagation();
                            $(this).removeClass('drag-over');
                        })
                        .on('drop', function(e) {
                            e.preventDefault();
                            e.stopPropagation();
                            $(this).removeClass('drag-over');
                            const files = e.originalEvent.dataTransfer.files;
                            if (files.length) {
                                fileInput[0].files = files;
                                handleFileSelect({ target: fileInput[0] });
                            }
                        });
                }, 100);
            });
        });
    </script>
