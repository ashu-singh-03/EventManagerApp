@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Attendee Management";
}


<style>
        :root {
            --primary: #FFC107;
            --primary-dark: #FFA000;
            --primary-light: #FFECB3;
            --secondary: #212121;
            --light: #FFFDE7;
            --dark: #212121;
            --gray: #757575;
            --light-gray: #F5F5F5;
            --border: #E0E0E0;
            --danger: #D32F2F;
            --success: #388E3C;
            --warning: #F57C00;
            --info: #1976D2;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--light);
            color: var(--dark);
            line-height: 1.6;
            font-size: 14px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 15px;
        }

        header {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: var(--dark);
            padding: 15px 0;
            border-radius: 8px;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .menu-bar {
            display: flex;
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 20px;
            box-shadow: 0 1px 5px rgba(0, 0, 0, 0.05);
        }

        .menu-itemlocal {
            flex: 1;
            text-align: center;
            padding: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            color: var(--gray);
            font-size: 0.9rem;
            border-right: 1px solid var(--border);
        }

            .menu-itemlocal:last-child {
                border-right: none;
            }

            .menu-itemlocal.active {
                background-color: var(--primary);
                color: var(--dark);
            }

            .menu-itemlocal:hover:not(.active) {
                background-color: var(--primary-light);
            }

        .content-section {
            display: none;
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 1px 5px rgba(0,0,0,0.05);
            margin-bottom: 20px;
            min-height: 600px; /* Default min-height for smooth transition */
        }

            .content-section.active {
                display: block;
            }

        .table-container {
            overflow-x: auto;
            border-radius: 8px;
            box-shadow: 0 1px 5px rgba(0,0,0,0.05);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            font-size: 0.85rem;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid var(--border);
        }

        th {
            background-color: var(--light-gray);
            font-weight: 600;
            color: var(--dark);
        }

        tr:hover {
            background-color: var(--primary-light);
        }

        .btn {
            padding: 10px 18px;
            border: none;
            border-radius: 5px;
            font-weight: 600;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            font-size: 0.9rem;
        }

        .btn-primary {
            background-color: var(--primary);
            color: var(--dark);
        }

            .btn-primary:hover {
                background-color: var(--primary-dark);
            }

        .btn-secondary {
            background-color: var(--light-gray);
            color: var(--dark);
        }

            .btn-secondary:hover {
                background-color: var(--border);
            }

        .btn-danger {
            background-color: var(--danger);
            color: white;
        }

        .form-row {
            display: flex;
            gap: 15px;
            margin-bottom: 15px;
        }

        .form-col {
            flex: 1;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 6px;
            font-weight: 600;
            color: var(--dark);
            font-size: 0.9rem;
        }

        input, select, textarea {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid var(--border);
            border-radius: 5px;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

            input:focus, select:focus, textarea:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 2px rgba(255, 193, 7, 0.2);
            }

        .action-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--border);
        }

        .section-title {
            font-size: 1.2rem;
            margin-bottom: 15px;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 8px;
        }

    </style>
<div class="container">

    <div class="menu-bar">
        <div class="menu-itemlocal active" data-section="manage-attendees">Manage Attendees</div>
        <div class="menu-itemlocal" data-section="attendees-list">Attendees List</div>
    </div>

    <!-- Manage Attendees Section -->
    <div class="content-section active" id="manage-attendees">
        <div class="action-bar">
            <h2 class="section-title"><i class="fas fa-user-edit"></i> Manage Attendees</h2>
        </div>
        <form id="attendeeForm">
            <input type="hidden" id="EventId" name="EventId" value="@ViewBag.EventId" />

            <div class="form-row">
                <div class="form-col">
                    <label for="firstName">First Name *</label>
                    <input type="text" id="firstName" name="FirstName" required>
                </div>
                <div class="form-col">
                    <label for="lastName">Last Name *</label>
                    <input type="text" id="lastName" name="LastName" required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-col">
                    <label for="email">Email Address *</label>
                    <input type="email" id="email" name="Email" required>
                </div>
                <div class="form-col">
                    <label for="phone">Phone Number</label>
                    <input type="tel" id="phone" name="Phone">
                </div>
            </div>

            <div class="form-row">
                <div class="form-col">
                    <label for="company">Company</label>
                    <input type="text" id="company" name="Company">
                </div>
                <div class="form-col">
                    <label for="department">Department</label>
                    <input type="text" id="department" name="Department">
                </div>
            </div>

            <div class="form-group">
                <label for="notes">Additional Notes</label>
                <textarea id="notes" name="Notes" rows="2"></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Attendee</button>
            </div>
        </form>
    </div>

    <!-- Attendees List Section -->
    <div class="content-section" id="attendees-list">
        <h2 class="section-title"><i class="fas fa-list-alt"></i> Attendees List</h2>
        <div class="table-container" id="attendeesTableContainer">
            <table class="table" id="attendeesTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Company</th>
                        <th>Department</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="attendeesTableBody"></tbody>
            </table>
        </div>
    </div>

</div>

@section Scripts {
<script>
$(document).ready(function () {

    var isEditing = false;

    // ---------------------------------------------
    // TAB SWITCHING
    // ---------------------------------------------
    $('.menu-itemlocal').click(function () {
        $('.menu-itemlocal').removeClass('active');
        $(this).addClass('active');

        $('.content-section').removeClass('active');
        $('#' + $(this).data('section')).addClass('active');

        if ($(this).data('section') === 'attendees-list') {
            loadParticipants();
        }

        if ($(this).data('section') === 'manage-attendees') {
            $('#attendeeForm')[0].reset();
            $('#attendeeForm').removeData('participant-id');
            $('#attendeeForm button[type="submit"]').text('Save Attendee');
            isEditing = false;
        }
    });

    // ---------------------------------------------
    // FORM VALIDATION
    // ---------------------------------------------
    $('#attendeeForm').validate({
        rules: {
            FirstName: { required: true, minlength: 2 },
            LastName: { required: true, minlength: 2 },
            Email: { required: true, email: true }
        },
        messages: {
            FirstName: {
                required: "First Name is required",
                minlength: "First Name must be at least 2 characters"
            },
            LastName: {
                required: "Last Name is required",
                minlength: "Last Name must be at least 2 characters"
            },
            Email: {
                required: "Email Address is required",
                email: "Please enter a valid email address"
            }
        },
        errorClass: "text-danger",
        errorPlacement: function (error, element) {
            error.insertAfter(element);
        },
        highlight: function (element) {
            $(element).addClass('is-invalid');
        },
        unhighlight: function (element) {
            $(element).removeClass('is-invalid');
        },
        submitHandler: function () {
            saveParticipant();
        }
    });

    // ---------------------------------------------
    // SAVE / UPDATE PARTICIPANT
    // ---------------------------------------------

        function saveParticipant() {
            var participantId = $('#attendeeForm').data('participant-id') || 0;

            // Use PascalCase to match DTO properties
            const dto = {
                ParticipantId: participantId,
                EventId: Number($('#EventId').val()) || 0,
                FirstName: $('#firstName').val(),
                LastName: $('#lastName').val(),
                Email: $('#email').val(),
                Phone: $('#phone').val(),
                Company: $('#company').val(),
                Department: $('#department').val(),
                Notes: $('#notes').val()
            };

            $.ajax({
                url: '@Url.Action("Save", "Participant")',
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(dto),
                success: function () {
                    debugger;
                    alert('Participant saved successfully!');
                    $('#attendeeForm')[0].reset();
                    $('#attendeeForm').removeData('participant-id');
                    $('#attendeeForm button[type="submit"]').text('Save Attendee');
                    // Switch to attendee list tab if needed
                    $('.menu-itemlocal[data-section="attendees-list"]').click();
                },
                error: function (xhr) {
                    alert('Error: ' + xhr.responseText);
                }
            });
        }


    // ---------------------------------------------
    // LOAD PARTICIPANTS
    // ---------------------------------------------
    function loadParticipants() {
        $.ajax({
            url: '@Url.Action("LoadParticipants", "Participant")',
            type: 'GET',
            data: { eventId: $('#EventId').val() },
            success: function (participants) {
                let tbody = $('#attendeesTableBody');
                tbody.empty();

                if (!participants || participants.length === 0) {
                    tbody.append(`<tr><td colspan="7" class="text-center">No attendees found</td></tr>`);
                    return;
                }

                participants.forEach(p => {
                    tbody.append(`
                        <tr>
                            <td>${p.participantId}</td>
                            <td>${p.firstName} ${p.lastName}</td>
                            <td>${p.email ?? ''}</td>
                            <td>${p.phone ?? ''}</td>
                            <td>${p.company ?? ''}</td>
                            <td>${p.department ?? ''}</td>
                            <td>
                                <button class="btn btn-warning btn-sm edit-btn" data-id="${p.participantId}">Edit</button>
                                <button class="btn btn-danger btn-sm delete-btn" data-id="${p.participantId}">Delete</button>
                            </td>
                        </tr>
                    `);
                });
            },
            error: function (xhr) {
                alert('Error loading participants: ' + xhr.responseText);
            }
        });
    }

    // ---------------------------------------------
    // EDIT PARTICIPANT
    // ---------------------------------------------
    $(document).on('click', '.edit-btn', function () {
        var participantId = $(this).data('id');
        isEditing = true;

        $.ajax({
            url: '@Url.Action("Details", "Participant")',
            type: 'GET',
            data: { id: participantId },
            success: function (participant) {
                $('.menu-itemlocal').removeClass('active');
                $('.menu-itemlocal[data-section="manage-attendees"]').addClass('active');
                $('.content-section').removeClass('active');
                $('#manage-attendees').addClass('active');

                // populate form
                $('#EventId').val(participant.eventId);
                $('#firstName').val(participant.firstName);
                $('#lastName').val(participant.lastName);
                $('#email').val(participant.email);
                $('#phone').val(participant.phone);
                $('#company').val(participant.company);
                $('#department').val(participant.department);
                $('#notes').val(participant.notes);

                $('#attendeeForm').data('participant-id', participant.participantId);
                $('#attendeeForm button[type="submit"]').text('Update Attendee');

                $('html, body').animate({
                    scrollTop: $('#manage-attendees').offset().top
                }, 500);
            },
            error: function () {
                alert('Error fetching participant details.');
            }
        });
    });

    // ---------------------------------------------
    // DELETE PARTICIPANT
    // ---------------------------------------------
    $(document).on('click', '.delete-btn', function () {
        const participantId = $(this).data('id');

        if (!confirm('Are you sure you want to delete this participant?')) return;

        $.ajax({
            url: '@Url.Action("Delete", "Participant")',
            type: 'POST',
            data: { id: participantId },
            success: function () {
                alert('Participant deleted successfully!');
                loadParticipants();
            },
            error: function (xhr) {
                alert('Error deleting participant: ' + xhr.responseText);
            }
        });
    });

});
</script>
}

