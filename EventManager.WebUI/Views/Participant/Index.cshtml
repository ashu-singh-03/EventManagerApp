        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script>
        $(document).ready(function () {
            // Alert functions
            function showSuccess(message, totalRecords, importedRecords) {
                const alertId = 'alert-' + Date.now();
                const successHtml = `
                    <div id="${alertId}" class="alert alert-success">
                        <i class="fas fa-check-circle alert-icon"></i>
                        <div class="alert-content">
                            <div class="alert-title">
                                <span>Import Successful!</span>
                                <button class="btn-close-alert" onclick="closeAlert('${alertId}')">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="alert-message">${message}</div>
                            <div class="alert-stats">
                                <span class="stat-badge stat-success">
                                    <i class="fas fa-users"></i> Total: ${totalRecords}
                                </span>
                                <span class="stat-badge stat-success">
                                    <i class="fas fa-check-circle"></i> Imported: ${importedRecords}
                                </span>
                            </div>
                        </div>
                    </div>`;
                $('.alert-area').append(successHtml);
                setTimeout(() => closeAlert(alertId), 8000);
            }

            function showError(message, totalRecords, failedRecords, errorFileUrl) {
                const alertId = 'alert-' + Date.now();

                // Convert to numbers
                const totalNum = Number(totalRecords) || 0;
                const failedNum = Number(failedRecords) || 0;

                let errorHtml = `
                    <div id="${alertId}" class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle alert-icon"></i>
                        <div class="alert-content">
                            <div class="alert-title">
                                <span>Import Failed</span>
                                <button class="btn-close-alert" onclick="closeAlert('${alertId}')">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="alert-message">${message || 'Unknown error'}</div>
                            <div class="alert-stats">
                                <span class="stat-badge stat-secondary">
                                    <i class="fas fa-users"></i> Total: ${totalNum}
                                </span>
                                <span class="stat-badge stat-danger">
                                    <i class="fas fa-times-circle"></i> Failed: ${failedNum}
                                </span>
                            </div>`;

                if (errorFileUrl && errorFileUrl !== 'null' && errorFileUrl.trim() !== '') {
                    errorHtml += `
                        <div class="alert-actions">
                            <a href="${errorFileUrl}" class="btn-download-error" target="_blank" download>
                                <i class="fas fa-download"></i> Download Error Report
                            </a>
                        </div>`;
                } else {
                    errorHtml += `
                        <div class="no-error-report">
                            <i class="fas fa-info-circle"></i> No error report available
                        </div>`;
                }

                errorHtml += `</div></div>`;
                $('.alert-area').append(errorHtml);
                setTimeout(() => closeAlert(alertId), 10000);
            }

            window.closeAlert = function(alertId) {
                const alert = $('#' + alertId);
                if (alert.length) {
                    alert.css('animation', 'fadeOut 0.5s ease forwards');
                    setTimeout(() => alert.remove(), 500);
                }
            };

            // Tab switching
            $('.menu-itemlocal').click(function () {
                $('.menu-itemlocal').removeClass('active');
                $(this).addClass('active');
                $('.content-section').removeClass('active');
                $('#' + $(this).data('section')).addClass('active');

                if ($(this).data('section') === 'attendees-list') {
                    loadParticipants();
                } else if ($(this).data('section') === 'manage-attendees') {
                    $('#attendeeForm')[0].reset();
                    $('#attendeeForm').removeData('participant-id');
                    $('#attendeeForm button[type="submit"]').text('Save Attendee');
                }
            });

            // Form validation
            $('#attendeeForm').validate({
                rules: {
                    FirstName: { required: true, minlength: 2 },
                    LastName: { required: true, minlength: 2 },
                    Email: { required: true, email: true }
                },
                messages: {
                    FirstName: { required: "First Name is required", minlength: "First Name must be at least 2 characters" },
                    LastName: { required: "Last Name is required", minlength: "Last Name must be at least 2 characters" },
                    Email: { required: "Email Address is required", email: "Please enter a valid email address" }
                },
                errorClass: "text-danger",
                errorPlacement: (error, element) => error.insertAfter(element),
                highlight: (element) => $(element).addClass('is-invalid'),
                unhighlight: (element) => $(element).removeClass('is-invalid'),
                submitHandler: saveParticipant
            });

            // Save participant
            function saveParticipant() {
                const dto = {
                    ParticipantId: $('#attendeeForm').data('participant-id') || 0,
                    EventId: Number($('#EventId').val()) || 0,
                    FirstName: $('#firstName').val(),
                    LastName: $('#lastName').val(),
                    Email: $('#email').val(),
                    Phone: $('#phone').val(),
                    Company: $('#company').val(),
                    Department: $('#department').val(),
                    Notes: $('#notes').val()
                };

                $.ajax({
                    url: '@Url.Action("Save", "Participant")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(dto),
                    success: function () {
                        showSuccess('Participant saved successfully!', 1, 1);
                        $('#attendeeForm')[0].reset();
                        $('#attendeeForm').removeData('participant-id');
                        $('#attendeeForm button[type="submit"]').text('Save Attendee');
                        $('.menu-itemlocal[data-section="attendees-list"]').click();
                    },
                    error: function (xhr) {
                        const errorMessage = xhr.responseJSON?.message || 'Error saving participant';
                        showError(errorMessage, 1, 1);
                    }
                });
            }

            // Load participants
            function loadParticipants() {
                $.ajax({
                    url: '@Url.Action("LoadParticipants", "Participant")',
                    type: 'GET',
                    data: { eventId: $('#EventId').val() },
                    success: function (participants) {
                        const tbody = $('#attendeesTableBody');
                        tbody.empty();

                        if (!participants?.length) {
                            tbody.append('<tr><td colspan="7" class="text-center">No attendees found</td></tr>');
                            return;
                        }

                        participants.forEach(p => {
                            tbody.append(`
                                <tr>
                                    <td>${p.participantId}</td>
                                    <td>${p.firstName} ${p.lastName}</td>
                                    <td>${p.email || ''}</td>
                                    <td>${p.phone || ''}</td>
                                    <td>${p.company || ''}</td>
                                    <td>${p.department || ''}</td>
                                    <td>
                                        <button class="btn btn-warning btn-sm edit-btn" data-id="${p.participantId}">Edit</button>
                                        <button class="btn btn-danger btn-sm delete-btn" data-id="${p.participantId}">Delete</button>
                                    </td>
                                </tr>`);
                        });
                    },
                    error: function (xhr) {
                        showError('Error loading participants', 0, 0);
                    }
                });
            }

            // Edit participant
            $(document).on('click', '.edit-btn', function () {
                const participantId = $(this).data('id');
                $.ajax({
                    url: '@Url.Action("Details", "Participant")',
                    type: 'GET',
                    data: { id: participantId },
                    success: function (participant) {
                        $('.menu-itemlocal[data-section="manage-attendees"]').click();
                        $('#EventId').val(participant.eventId);
                        $('#firstName').val(participant.firstName);
                        $('#lastName').val(participant.lastName);
                        $('#email').val(participant.email);
                        $('#phone').val(participant.phone);
                        $('#company').val(participant.company);
                        $('#department').val(participant.department);
                        $('#notes').val(participant.notes);
                        $('#attendeeForm').data('participant-id', participant.participantId);
                        $('#attendeeForm button[type="submit"]').text('Update Attendee');
                    },
                    error: function () {
                        showError('Error fetching participant details.', 0, 0);
                    }
                });
            });

            // Delete participant
            $(document).on('click', '.delete-btn', function () {
                if (!confirm('Are you sure you want to delete this participant?')) return;

                const participantId = $(this).data('id');
                $.ajax({
                    url: '@Url.Action("Delete", "Participant")',
                    type: 'POST',
                    data: { id: participantId },
                    success: function () {
                        showSuccess('Participant deleted successfully!', 1, 1);
                        loadParticipants();
                    },
                    error: function (xhr) {
                        showError('Error deleting participant', 1, 1);
                    }
                });
            });

            // Bulk upload modal
            const modal = $('#bulkUploadModal');
            const fileInput = $('#fileInput');
            const dropZone = $('#dropZone');
            const modalUploadBtn = $('#modalUploadBtn');

            // Open/close modal
            $('#bulkUploadBtn').click(() => modal.addClass('show'));
            $('#modalClose').click(() => modal.removeClass('show'));
            modal.click((e) => { if ($(e.target).is('#bulkUploadModal')) modal.removeClass('show'); });

            // File handling
            $('#browseBtn').click(() => fileInput.click());
            fileInput.change(handleFileSelect);

            // Drag and drop
            dropZone.on('dragover dragleave drop', function(e) {
                e.preventDefault();
                e.stopPropagation();
                if (e.type === 'dragover') $(this).addClass('drag-over');
                else if (e.type === 'dragleave') $(this).removeClass('drag-over');
                else if (e.type === 'drop') {
                    $(this).removeClass('drag-over');
                    const files = e.originalEvent.dataTransfer.files;
                    if (files.length) {
                        fileInput[0].files = files;
                        handleFileSelect({ target: fileInput[0] });
                    }
                }
            });

            function handleFileSelect(e) {
                const file = e.target.files[0];
                if (!file) return;

                const fileExtension = '.' + file.name.split('.').pop().toLowerCase();
                if (!['.xlsx', '.xls', '.csv'].includes(fileExtension)) {
                    showError('Please select a valid Excel file (.xlsx, .xls, .csv)', 0, 0);
                    return;
                }

                dropZone.html(`
                    <div class="upload-icon" style="color: var(--primary);">
                        <i class="fas fa-file-excel"></i>
                    </div>
                    <h3>${file.name}</h3>
                    <p><i class="fas fa-spinner fa-spin"></i> Reading file...</p>
                    <button class="btn btn-secondary" id="changeFileBtn" style="margin-top: 10px;">
                        <i class="fas fa-exchange-alt"></i> Change File
                    </button>`);

                $('#previewTable tbody').html(`
                    <tr>
                        <td colspan="7" style="text-align: center; padding: 30px;">
                            <i class="fas fa-spinner fa-spin fa-2x" style="color: var(--primary); margin-bottom: 10px;"></i><br>
                            <span style="color: var(--gray);">Reading Excel file...</span>
                        </td>
                    </tr>`);

                $('#changeFileBtn').click(() => {
                    fileInput.val('');
                    dropZone.html(`
                        <div class="upload-icon"><i class="fas fa-file-upload"></i></div>
                        <h3>Drag & Drop your Excel file here</h3>
                        <p>or</p>
                        <button class="btn btn-primary" id="browseBtn">
                            <i class="fas fa-folder-open"></i> Browse Files
                        </button>`);
                    $('#previewTable tbody').empty();
                });

                parseExcelFile(file);
            }

            function parseExcelFile(file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    try {
                        const data = new Uint8Array(e.target.result);
                        const workbook = XLSX.read(data, { type: 'array' });
                        const worksheet = workbook.Sheets[workbook.SheetNames[0]];
                        const jsonData = XLSX.utils.sheet_to_json(worksheet, { header: 1 });

                        if (jsonData.length <= 1) {
                            $('#previewTable tbody').html('<tr><td colspan="7" class="text-center text-warning">Only headers found. No data rows.</td></tr>');
                            dropZone.find('p').text(`${(file.size/1024).toFixed(2)} KB • No data rows`);
                            return;
                        }

                        const headers = jsonData[0] || [];
                        const attendeeData = [];

                        for (let i = 1; i < jsonData.length; i++) {
                            const row = jsonData[i];
                            const hasData = row.some(cell => cell?.toString().trim());
                            if (!hasData) continue;

                            const attendee = {
                                firstName: '',
                                lastName: '',
                                email: '',
                                phone: '',
                                company: '',
                                department: '',
                                notes: ''
                            };

                            for (let j = 0; j < headers.length && j < row.length; j++) {
                                const header = (headers[j] || '').toString().toLowerCase();
                                const value = (row[j] || '').toString().trim();
                                if (!value) continue;

                                if (header.includes('first')) attendee.firstName = value;
                                else if (header.includes('last')) attendee.lastName = value;
                                else if (header.includes('email')) attendee.email = value;
                                else if (header.includes('phone')) attendee.phone = value;
                                else if (header.includes('company')) attendee.company = value;
                                else if (header.includes('department') || header.includes('dept')) attendee.department = value;
                                else if (header.includes('note')) attendee.notes = value;
                            }

                            if (attendee.firstName || attendee.lastName || attendee.email) {
                                attendeeData.push(attendee);
                            }
                        }

                        dropZone.find('p').html(`
                            <i class="fas fa-check-circle" style="color: var(--success);"></i>
                            ${(file.size/1024).toFixed(2)} KB • ${attendeeData.length} attendees found`);

                        renderPreviewTable(attendeeData);

                    } catch (error) {
                        $('#previewTable tbody').html(`<tr><td colspan="7" class="text-center text-danger">Error: ${error.message}</td></tr>`);
                        dropZone.find('p').html(`<i class="fas fa-times-circle" style="color: var(--danger);"></i> ${(file.size/1024).toFixed(2)} KB • Error`);
                    }
                };
                reader.onerror = () => {
                    $('#previewTable tbody').html('<tr><td colspan="7" class="text-center text-danger">Could not read file</td></tr>');
                    dropZone.find('p').html('<i class="fas fa-times-circle" style="color: var(--danger);"></i> File read error');
                };
                reader.readAsArrayBuffer(file);
            }

            function renderPreviewTable(data) {
                const tbody = $('#previewTable tbody');
                tbody.empty();

                if (!data?.length) {
                    tbody.html('<tr><td colspan="7" class="text-center text-muted">No data to display</td></tr>');
                    return;
                }

                const previewRows = Math.min(data.length, 10);
                for (let i = 0; i < previewRows; i++) {
                    const row = data[i];
                    tbody.append(`
                        <tr>
                            <td>${escapeHtml(row.firstName || '')}</td>
                            <td>${escapeHtml(row.lastName || '')}</td>
                            <td>${escapeHtml(row.email || '')}</td>
                            <td>${escapeHtml(row.phone || '')}</td>
                            <td>${escapeHtml(row.company || '')}</td>
                            <td>${escapeHtml(row.department || '')}</td>
                            <td>${escapeHtml(row.notes || '')}</td>
                        </tr>`);
                }

                if (data.length > previewRows) {
                    tbody.append(`<tr><td colspan="7" class="text-center text-muted"><i class="fas fa-ellipsis-h"></i> and ${data.length - previewRows} more rows</td></tr>`);
                }

                tbody.append(`<tr><td colspan="7" class="text-center fw-bold bg-primary-light"><i class="fas fa-users"></i> Total: ${data.length} attendees found</td></tr>`);
            }

            function escapeHtml(text) {
                if (!text) return '';
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            // Download template
            $('#downloadTemplateBtn').click(() => window.location.href = '@Url.Action("DownloadTemplate", "Participant")');

            // Upload process - SIMPLIFIED
            modalUploadBtn.click(function() {
                const file = fileInput[0].files[0];
                if (!file) {
                    showError('Please select a file first.', 0, 0);
                    return;
                }

                const fileExtension = '.' + file.name.split('.').pop().toLowerCase();
                if (!['.xlsx', '.xls', '.csv'].includes(fileExtension)) {
                    showError('Please select a valid Excel file (.xlsx, .xls, .csv)', 0, 0);
                    return;
                }

                const originalText = modalUploadBtn.html();
                modalUploadBtn.html('<i class="fas fa-spinner fa-spin"></i> Uploading...').prop('disabled', true);

                const formData = new FormData();
                formData.append('file', file);

                $.ajax({
                    url: '/Participant/ImportExcel',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    beforeSend: function(xhr) {
                        const token = localStorage.getItem('token') || sessionStorage.getItem('token');
                        if (token) xhr.setRequestHeader('Authorization', 'Bearer ' + token);
                    },
                    success: function(response) {
                        console.log("AJAX Response:", response);

                        if (response.success) {
                            showSuccess(
                                response.message,
                                response.totalRecords || response.TotalRecords || 0,
                                response.importedRecords || response.ImportedRecords || 0
                            );
                            modal.removeClass('show');
                            fileInput.val('');
                            loadParticipants();
                        } else {
                            showError(
                                response.message,
                                response.totalRecords || response.TotalRecords || 0,
                                response.failedRecords || response.FailedRecords || 0,
                                response.errorFileUrl || null
                            );
                        }
                    },
                    error: function(xhr) {
                        let errorMessage = 'Error during import';

                        if (xhr.status === 401) {
                            errorMessage = 'Unauthorized. Please login again.';
                            window.location.href = '/Account/Login';
                            return;
                        } else if (xhr.status === 403) {
                            errorMessage = 'Access denied. You do not have permission.';
                        } else if (xhr.responseJSON?.message) {
                            errorMessage = xhr.responseJSON.message;
                        } else if (xhr.statusText) {
                            errorMessage = xhr.statusText;
                        }

                        showError(errorMessage, 0, 0);
                    },
                    complete: function() {
                        modalUploadBtn.html(originalText).prop('disabled', false);
                    }
                });
            });

            // Initialize
            dropZone.html(`
                <div class="upload-icon"><i class="fas fa-file-upload"></i></div>
                <h3>Drag & Drop your Excel file here</h3>
                <p>or</p>
                <button class="btn btn-primary" id="browseBtn">
                    <i class="fas fa-folder-open"></i> Browse Files
                </button>`);
        });
    </script>
}