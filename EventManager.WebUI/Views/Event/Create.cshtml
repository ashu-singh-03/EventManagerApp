        // Function to set up event listeners for a ticket
        function setupTicketEventListeners(ticketCard, ticketId) {
            // Add event listener for free checkbox
            const freeCheckbox = ticketCard.querySelector(`#free-${ticketId}`);
            const priceInput = ticketCard.querySelector('.price-input input');

            freeCheckbox.addEventListener('change', function() {
                if (this.checked) {
                    priceInput.value = '0';
                    priceInput.disabled = true;
                } else {
                    priceInput.disabled = false;
                }
