        // Function to apply global settings to a ticket
        function applyGlobalSettingsToTicket(ticketCard) {
            const globalPrice = document.getElementById('global-price').value;
            const globalBookingType = document.getElementById('global-booking-type').value;
            const globalCapacity = document.getElementById('global-capacity').value;
            const globalQuantity = document.getElementById('global-quantity').value;
            const globalSalesEnd = document.getElementById('global-sales-end').value;
            const globalWaitingList = document.getElementById('global-waiting-list').checked;

            // Apply price
            const priceInput = ticketCard.querySelector('.price-input input');
            priceInput.value = globalPrice;

            // Apply booking type
            const bookingTypeOptions = ticketCard.querySelectorAll('.booking-type-option');
            const approvalContent = ticketCard.querySelector('.booking-type-content');

            bookingTypeOptions.forEach(option => {
                option.classList.remove('active');
                if (option.dataset.bookingType === globalBookingType) {
                    option.classList.add('active');
                    const radioInput = option.querySelector('input');
                    radioInput.checked = true;

                    if (globalBookingType === 'approval') {
                        approvalContent.classList.add('active');
                    } else {
                        approvalContent.classList.remove('active');
                    }
                }
            });

            // Apply capacity
            const capacityOptions = ticketCard.querySelectorAll('.capacity-option');
            const capacityLimited = ticketCard.querySelector('.capacity-limited');

            capacityOptions.forEach(option => {
                option.classList.remove('active');
                if (option.dataset.capacity === globalCapacity) {
                    option.classList.add('active');
                    const radioInput = option.querySelector('input');
                    radioInput.checked = true;

                    if (globalCapacity === 'limited') {
                        capacityLimited.classList.add('active');
                    } else {
                        capacityLimited.classList.remove('active');
                    }
                }
            });

            // Apply quantity and sales end date if limited capacity
            if (globalCapacity === 'limited') {
                const quantityInput = capacityLimited.querySelector('input[type="number"]');
                const salesEndInput = capacityLimited.querySelector('input[type="date"]');

                quantityInput.value = globalQuantity;
                if (globalSalesEnd) {
                    salesEndInput.value = globalSalesEnd;
                }
            }

            // Apply waiting list setting
            const waitingListToggle = ticketCard.querySelector('.waiting-list-toggle-input');
            const waitingListContent = ticketCard.querySelector('.waiting-list-content');

            waitingListToggle.checked = globalWaitingList;
            if (globalWaitingList) {
                waitingListContent.classList.add('active');
            } else {
                waitingListContent.classList.remove('active');
            }
        }

