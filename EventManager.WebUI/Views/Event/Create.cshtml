<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Event - Multi-Step Form</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-calendar-plus"></i> Create New Event</h1>
        </div>

        <div class="form-container">
            <!-- Multi-step progress indicator -->
            <div class="form-steps">
                <div class="step active" data-step="1">
                    <div class="step-number">1</div>
                    <div class="step-label">Event Details</div>
                </div>
                <div class="step" data-step="2">
                    <div class="step-number">2</div>
                    <div class="step-label">Ticket Setup</div>
                </div>
                <div class="step" data-step="3">
                    <div class="step-number">3</div>
                    <div class="step-label">Coupons & Extras</div>
                </div>
                <div class="step" data-step="4">
                    <div class="step-number">4</div>
                    <div class="step-label">Review & Submit</div>
                </div>
            </div>

            <form id="eventForm">
                <input type="hidden" id="eventId" name="EventId" value="@Model?.Event?.EventId" />
                <!-- Step 1: Event Details -->
                <div class="form-step active" id="step-1">
                    <h2><i class="fas fa-info-circle"></i> Event Details</h2>

                    <div class="form-row">
                        <div class="form-group full-width">
                            <label for="eventTitle" class="required">Event Title</label>
                            <input type="text" id="eventTitle" name="eventTitle" value="@Model?.Event?.EventName" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group full-width">
                            <label for="eventDescription" class="required">Event Description</label>
                            <textarea id="eventDescription" name="eventDescription" required>@Model?.Event?.EventDescription</textarea>

                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="eventDate" class="required">Event Date</label>
                            <input type="date" id="eventDate" name="eventDate" value="@Model?.Event?.EventDate" required>

                        </div>

                        <div class="form-group">
                            <label for="eventTime" class="required">Event Time</label>
                            <input type="time" id="eventTime" name="eventTime" value="@Model?.Event?.EventTime" required>

                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group full-width">
                            <label for="eventLocation" class="required">Event Location</label>
                            <input type="text" id="eventLocation" name="eventLocation" value="@Model?.Event?.Location" required>

                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="endDate" class="required">End Date</label>
                            <input type="date" id="endDate" name="endDate" value="@Model?.Event?.EndDate" required>

                        </div>

                        <div class="form-group">
                            <label for="endTime" class="required">End Time</label>
                            <input type="time" id="endTime" name="endTime" value="@Model?.Event?.EndTime" required>

                        </div>
                    </div>

                    <div class="button-group">
                        <button type="button" class="btn-cancel">
                            <i class="fas fa-times"></i> Cancel
                        </button>
                        <button type="button" class="btn-next" data-next="2">
                            Next <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <!-- Step 2: Ticket Setup -->
                <div class="form-step" id="step-2">
                    <h2><i class="fas fa-ticket-alt"></i> Ticket Configuration</h2>

                    <div class="global-config">
                        <div class="config-header">
                            <h3><i class="fas fa-cogs"></i> Global Ticket Configuration</h3>
                        </div>

                        <div class="config-options">
                            <div class="config-option active" data-config="separate">
                                <input type="radio" name="config-type" id="separate-config" checked>
                                <label for="separate-config">
                                    <i class="fas fa-indent"></i> Configure Each Ticket Separately
                                </label>
                            </div>
                            <div class="config-option" data-config="same">
                                <input type="radio" name="config-type" id="same-config">
                                <label for="same-config">
                                    <i class="fas fa-copy"></i> Same Configuration for All Tickets
                                </label>
                            </div>
                        </div>

                        <div class="config-info">
                            <i class="fas fa-info-circle"></i>
                            Choose whether to apply the same settings to all ticket types or configure each one individually.
                        </div>

                        <div class="global-settings" id="global-settings">
                            <h3 style="color: #b8860b; font-size: 1.1rem; margin-bottom: 15px;">
                                <i class="fas fa-sliders-h"></i> Global Ticket Settings
                            </h3>

                            <div class="ticket-form-row">
                                <div class="ticket-form-group price-input">
                                    <label>Default Price</label>
                                    <input type="number" min="0" step="0.01" value="0" id="global-price">
                                </div>
                                <div class="ticket-form-group">
                                    <label>Default Booking Type</label>
                                    <select id="global-booking-type">
                                        <option value="direct">Direct Booking</option>
                                        <option value="approval">Approval Required</option>
                                    </select>
                                </div>
                            </div>

                            <div class="ticket-form-row">
                                <div class="ticket-form-group">
                                    <label>Default Capacity</label>
                                    <select id="global-capacity">
                                        <option value="limited">Limited Capacity</option>
                                        <option value="unlimited">Unlimited Capacity</option>
                                    </select>
                                </div>
                                <div class="ticket-form-group">
                                    <label>Default Waiting List</label>
                                    <div class="waiting-list-toggle">
                                        <span>Enable by Default</span>
                                        <label class="toggle-switch">
                                            <input type="checkbox" id="global-waiting-list">
                                            <span class="toggle-slider"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="ticket-form-row" id="global-quantity-row">
                                <div class="ticket-form-group">
                                    <label>Default Quantity</label>
                                    <input type="number" min="1" value="100" id="global-quantity">
                                </div>
                                <div class="ticket-form-group">
                                    <label>Default Sales End Date</label>
                                    <input type="date" id="global-sales-end">
                                </div>
                            </div>

                            <div class="ticket-form-row">
                                <div class="ticket-form-group full-width">
                                    <button type="button" class="btn-apply" id="apply-global">
                                        <i class="fas fa-bolt"></i> Apply to All Existing Tickets
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="ticket-types">
                        <div class="ticket-header">
                            <h3><i class="fas fa-ticket-alt"></i> Ticket Types</h3>
                            <button type="button" class="btn-add" id="addTicketType">
                                <i class="fas fa-plus"></i> Add Ticket Type
                            </button>
                        </div>

                        <div id="ticketTypesContainer">
                            <!-- Ticket types will be added here dynamically -->
                        </div>
                    </div>

                    <div class="button-group">
                        <button type="button" class="btn-prev" data-prev="1">
                            <i class="fas fa-arrow-left"></i> Previous
                        </button>
                        <button type="button" class="btn-next" data-next="3">
                            Next <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <!-- Step 3: Coupons & Extras -->
                <div class="form-step" id="step-3">
                    <h2><i class="fas fa-tag"></i> Coupon Codes</h2>

                    <div class="coupon-section">
                        <div class="coupon-header">
                            <h3><i class="fas fa-tag"></i> Coupon Codes</h3>
                            <button type="button" class="btn-add" id="addCoupon">
                                <i class="fas fa-plus"></i> Add Coupon Code
                            </button>
                        </div>

                        <div class="config-info">
                            <i class="fas fa-info-circle"></i>
                            Create discount codes that attendees can use during RSVP. You can set percentage or fixed amount discounts.
                        </div>

                        <div id="couponContainer">
                            <!-- Coupon codes will be added here dynamically -->
                        </div>
                    </div>

                    <div class="button-group">
                        <button type="button" class="btn-prev" data-prev="2">
                            <i class="fas fa-arrow-left"></i> Previous
                        </button>
                        <button type="button" class="btn-next" data-next="4">
                            Next <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <!-- Step 4: Review & Submit -->
                <div class="form-step" id="step-4">
                    <h2><i class="fas fa-clipboard-check"></i> Review & Submit</h2>

                    <div class="review-section">
                        <div class="review-card" style="background: #fffef7; border: 1px solid #ffe082; border-radius: 8px; padding: 20px; margin-bottom: 20px;">
                            <h3 style="color: #b8860b; margin-bottom: 15px; display: flex; align-items: center; gap: 8px;">
                                <i class="fas fa-info-circle"></i> Event Details
                            </h3>
                            <div id="review-event-details">
                                <!-- Event details will be populated here -->
                            </div>
                        </div>

                        <div class="review-card" style="background: #fffef7; border: 1px solid #ffe082; border-radius: 8px; padding: 20px; margin-bottom: 20px;">
                            <h3 style="color: #b8860b; margin-bottom: 15px; display: flex; align-items: center; gap: 8px;">
                                <i class="fas fa-ticket-alt"></i> Ticket Types
                            </h3>
                            <div id="review-ticket-types">
                                <!-- Ticket types will be populated here -->
                            </div>
                        </div>

                        <div class="review-card" style="background: #fffef7; border: 1px solid #ffe082; border-radius: 8px; padding: 20px; margin-bottom: 20px;">
                            <h3 style="color: #b8860b; margin-bottom: 15px; display: flex; align-items: center; gap: 8px;">
                                <i class="fas fa-tag"></i> Coupon Codes
                            </h3>
                            <div id="review-coupons">
                                <!-- Coupons will be populated here -->
                            </div>
                        </div>
                    </div>

                    <div class="button-group">
                        <button type="button" class="btn-prev" data-prev="3">
                            <i class="fas fa-arrow-left"></i> Previous
                        </button>
                        <button type="button" class="btn-submit">
                            <i class="fas fa-check"></i> Create Event
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="footer">
        <p>Event Management System &copy; 2023</p>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function() {

            // Step 1: Save Event
            $('.btn-submit').on('click', function(e) {
                e.preventDefault();

                // Gather Event data
                const eventData = {
                    EventId: parseInt($('#eventId').val()) || 0, // Hidden input
                    EventName: $('#eventTitle').val(),
                    EventDescription: $('#eventDescription').val(),
                    EventDate: $('#eventDate').val(),
                    EventTime: $('#eventTime').val(),
                    Location: $('#eventLocation').val(),
                    EndDate: $('#endDate').val(),
                    EndTime: $('#endTime').val()
                };

                // Save Event first
                $.ajax({
                    url: '/Event/Save',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(eventData),
                    success: function(response) {
                        if (response.success) {
                        $('#eventId').val(response.eventId);
                        saveAllTicketTypes(response.eventId);
                        } else {
                            alert(response.message || 'Failed to save event.');
                        }
                    },
                    error: function(xhr) {
                        console.error(xhr);
                        alert('Error saving event: ' + xhr.responseText);
                    }
                });
            });

            // Function to save all ticket types
        function saveAllTicketTypes(eventId) {
            $('#ticketTypesContainer .ticket-card').each(function() {
                const $card = $(this);
                const ticketCounter = $card.data('ticket-counter'); // ensure this attribute exists

                // Ticket Name
                const ticketNameInput = $card.find('.ticket-name');
                const ticketName = ticketNameInput.length ? ticketNameInput.val().trim() : '';

                // Sales End Date
                const salesEndVal = $card.find('.ticket-sales-end').val();

                // Booking Type: 1 = Direct, 2 = Approval
                const bookingTypeInput = $card.find('input[name^="booking-type"]:checked');
                const BookingTypeID = bookingTypeInput.attr('id').startsWith('direct') ? 1 : 2;

                // Capacity: true = Unlimited, false = Limited
                const capacityInput = $card.find('input[name^="capacity"]:checked');
                const IsCapacityUnlimited = capacityInput.attr('id').startsWith('unlimited');

                // Free Ticket
                const IsFreeTicket = $card.find('.ticket-free').is(':checked');

                const ticketData = {
                    TicketTypeId: parseInt($card.data('ticket-id')) || 0,
                    EventId: parseInt(eventId) || 0,
                    TicketName: ticketName,
                    Price: parseFloat($card.find('.ticket-price').val()) || 0,
                    BookingTypeID: BookingTypeID,
                    IsCapacityUnlimited: IsCapacityUnlimited,
                    MinCapacity: parseInt($card.find('.ticket-min-capacity').val()) || 1,
                    MaxCapacity: parseInt($card.find('.ticket-max-capacity').val()) || 100,
                    SalesEndDate: salesEndVal || null, // send as string (YYYY-MM-DD)
                    Description: $card.find('.ticket-description').val() || '',
                    IsFreeTicket: IsFreeTicket,
                    UserId: 1
                };

                $.ajax({
                    url: '/TicketType/Save',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(ticketData),
                    success: function(resp) {
                        console.log('Ticket saved:', resp);
                    },
                    error: function(xhr) {
                        console.error('Error saving ticket:', xhr.responseText);
                    }
                });
            });
        }


        });


        // Keep your vanilla JS for the remaining steps (3,4, etc.)

        // Multi-step form functionality
        document.addEventListener('DOMContentLoaded', function() {
            const formSteps = document.querySelectorAll('.form-step');
            const stepIndicators = document.querySelectorAll('.step');
            const nextButtons = document.querySelectorAll('.btn-next');
            const prevButtons = document.querySelectorAll('.btn-prev');

            // Initialize the form with first step active
            showStep(1);

            // Next button event listeners
            nextButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const currentStep = getCurrentStep();
                    const nextStep = parseInt(this.getAttribute('data-next'));

                    // Validate current step before proceeding
                    if (validateStep(currentStep)) {
                        showStep(nextStep);
                    }
                });
            });

            // Previous button event listeners
            prevButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const prevStep = parseInt(this.getAttribute('data-prev'));
                    showStep(prevStep);
                });
            });

            // Function to show a specific step
            function showStep(stepNumber) {
                // Hide all steps
                formSteps.forEach(step => {
                    step.classList.remove('active');
                });

                // Show the selected step
                document.getElementById(`step-${stepNumber}`).classList.add('active');

                // Update step indicators
                stepIndicators.forEach(indicator => {
                    indicator.classList.remove('active', 'completed');

                    const indicatorStep = parseInt(indicator.getAttribute('data-step'));

                    if (indicatorStep < stepNumber) {
                        indicator.classList.add('completed');
                    } else if (indicatorStep === stepNumber) {
                        indicator.classList.add('active');
                    }
                });

                // If we're on the last step, update the review section
                if (stepNumber === 4) {
                    updateReviewSection();
                }
            }

            // Function to get current step number
            function getCurrentStep() {
                let currentStep = 1;
                formSteps.forEach((step, index) => {
                    if (step.classList.contains('active')) {
                        currentStep = index + 1;
                    }
                });
                return currentStep;
            }

            // Function to validate a step
            function validateStep(stepNumber) {
                let isValid = true;
                const currentStep = document.getElementById(`step-${stepNumber}`);

                // Get all required inputs in the current step
                const requiredInputs = currentStep.querySelectorAll('[required]');

                requiredInputs.forEach(input => {
                    if (!input.value.trim()) {
                        isValid = false;
                        input.style.borderColor = '#e53935';

                        // Add error message if not already present
                        // if (!input.nextElementSibling || !input.nextElementSibling.classList.contains('error-message')) {
                        //     const errorMsg = document.createElement('div');
                        //     errorMsg.className = 'error-message';
                        //     errorMsg.style.color = '#e53935';
                        //     errorMsg.style.fontSize = '0.8rem';
                        //     errorMsg.style.marginTop = '5px';
                        //     errorMsg.textContent = 'This field is required';
                        //     input.parentNode.appendChild(errorMsg);
                        // }
                    } else {
                        input.style.borderColor = '#ffe082';

                        // // Remove error message if exists
                        // if (input.nextElementSibling && input.nextElementSibling.classList.contains('error-message')) {
                        //     input.nextElementSibling.remove();
                        // }
                    }
                });


                // Additional validation for step 2
                if (stepNumber === 2) {
                    const ticketCards = document.querySelectorAll('.ticket-card');
                    // if (ticketCards.length === 0) {
                    //     isValid = false;
                    //     alert('Please add at least one ticket type.');
                    // }
                }

                // if (!isValid) {
                //     alert('Please fill in all required fields correctly before proceeding.');
                // }

                return isValid;
            }

            // Function to update the review section
            function updateReviewSection() {
                // Event details
                const eventTitle = document.getElementById('eventTitle').value;
                const eventDescription = document.getElementById('eventDescription').value;
                const eventDate = document.getElementById('eventDate').value;
                const eventTime = document.getElementById('eventTime').value;
                const eventLocation = document.getElementById('eventLocation').value;

                document.getElementById('review-event-details').innerHTML = `
                    <p><strong>Title:</strong> ${eventTitle || 'Not provided'}</p>
                    <p><strong>Description:</strong> ${eventDescription || 'Not provided'}</p>
                    <p><strong>Date:</strong> ${eventDate || 'Not provided'} at ${eventTime || 'Not provided'}</p>
                    <p><strong>Location:</strong> ${eventLocation || 'Not provided'}</p>
                `;

                // Ticket types
                const ticketCards = document.querySelectorAll('.ticket-card');
                let ticketHTML = '';

                if (ticketCards.length > 0) {
                    ticketCards.forEach(card => {
                        const ticketName = card.querySelector('input[type="text"]').value;
                        const ticketPrice = card.querySelector('.price-input input').value;
                        ticketHTML += `<p><strong>${ticketName || 'Unnamed Ticket'}:</strong> $${ticketPrice || '0'}</p>`;
                    });
                } else {
                    ticketHTML = '<p>No ticket types added</p>';
                }

                document.getElementById('review-ticket-types').innerHTML = ticketHTML;

                // Coupons
                const couponCards = document.querySelectorAll('.coupon-card');
                let couponHTML = '';

                if (couponCards.length > 0) {
                    couponCards.forEach(card => {
                        const couponCode = card.querySelector('.coupon-code-input input').value;
                        const discountType = card.querySelector('.discount-option.active').dataset.discountType;
                        const discountValue = card.querySelector('.discount-input input').value;

                        couponHTML += `<p><strong>${couponCode || 'No Code'}:</strong> ${discountValue}${discountType === 'percentage' ? '%' : '$'} off</p>`;
                    });
                } else {
                    couponHTML = '<p>No coupon codes added</p>';
                }

                document.getElementById('review-coupons').innerHTML = couponHTML;
            }

            // Initialize with one ticket and one coupon
            addTicketType();
            addCoupon();

            // Set minimum date to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('eventDate').setAttribute('min', today);
            document.getElementById('endDate').setAttribute('min', today);
            document.getElementById('global-sales-end').setAttribute('min', today);

            // Add event listener for "Add Ticket Type" button
            document.getElementById('addTicketType').addEventListener('click', addTicketType);

            // Add event listener for "Add Coupon" button
            document.getElementById('addCoupon').addEventListener('click', addCoupon);

            // Cancel button functionality
            document.querySelector('.btn-cancel').addEventListener('click', function() {
                if (confirm('Are you sure you want to cancel? All unsaved changes will be lost.')) {
                    window.location.href = '#'; // In a real app, redirect to previous page
                }
            });

            // Form submission handler
            document.getElementById('eventForm').addEventListener('submit', function(e) {
                e.preventDefault();

                // Validate all steps
                let allValid = true;
                for (let i = 1; i <= 4; i++) {
                    if (!validateStep(i)) {
                        allValid = false;
                        showStep(i);
                        break;
                    }
                }

                if (allValid) {
                    alert('Event created successfully!');
                    // In a real application, you would submit the form data to a server here
                }
            });
        });

        // All the other JavaScript functions from the original code (addTicketType, addCoupon, etc.)
        // would go here, but I've omitted them for brevity since they're quite lengthy
        // and the focus is on the multi-step functionality

        // Ticket type counter
        let ticketCounter = 0;
        let couponCounter = 0;
        let globalConfigMode = 'separate'; // 'separate' or 'same'

        // Function to generate a random coupon code
        function generateCouponCode() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let result = '';
            for (let i = 0; i < 8; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return result;
        }

        // Function to add a new coupon code
        function addCoupon() {
            couponCounter++;
            const container = document.getElementById('couponContainer');

            const couponCard = document.createElement('div');
            couponCard.className = 'coupon-card';
            couponCard.innerHTML = `
                <div class="coupon-card-header">
                    <div class="coupon-title">Coupon Code #${couponCounter}</div>
                    <button type="button" class="remove-coupon" onclick="removeCoupon(this)">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="coupon-form-row">
                    <div class="coupon-form-group coupon-code-input">
                        <label class="required">Coupon Code</label>
                        <input type="text" placeholder="e.g., SUMMER25" value="${generateCouponCode()}" required>
                    </div>
                    <div class="coupon-form-group">
                        <label>Description</label>
                        <input type="text" placeholder="e.g., Summer discount for students" >
                    </div>
                </div>

                <div class="discount-type">
                    <div class="discount-option active" data-discount-type="percentage">
                        <input type="radio" name="discount-type-${couponCounter}" id="percentage-${couponCounter}" checked>
                        <label for="percentage-${couponCounter}">
                            <i class="fas fa-percentage"></i> Percentage Discount
                        </label>
                    </div>
                    <div class="discount-option" data-discount-type="amount">
                        <input type="radio" name="discount-type-${couponCounter}" id="amount-${couponCounter}">
                        <label for="amount-${couponCounter}">
                            <i class="fas fa-dollar-sign"></i> Fixed Amount Discount
                        </label>
                    </div>
                </div>

                <div class="coupon-form-row">
                    <div class="coupon-form-group discount-input percentage" id="discount-input-${couponCounter}">
                        <label class="required">Discount Value</label>
                        <input type="number" min="0" max="100" step="1" value="10" required>
                    </div>
                    <div class="coupon-form-group">
                        <label>Valid Until</label>
                        <input type="date">
                    </div>
                </div>

                <div class="coupon-advanced">
                    <div class="coupon-advanced-header" onclick="toggleAdvancedSettings(this)">
                        <h3 style="color: #b8860b; font-size: 1rem;">
                            <i class="fas fa-cog"></i> Advanced Settings
                        </h3>
                        <i class="fas fa-chevron-down"></i>
                    </div>

                    <div class="coupon-advanced-content">
                        <div class="coupon-form-row">
                            <div class="coupon-form-group">
                                <label>Usage Limit</label>
                                <input type="number" min="0" placeholder="0 for unlimited">
                            </div>
                            <div class="coupon-form-group">
                                <label>Minimum Order Value</label>
                                <input type="number" min="0" step="0.01" placeholder="No minimum">
                            </div>
                        </div>

                        <div class="coupon-limitations">
                            <div class="limitation-option">
                                <input type="checkbox" id="apply-all-${couponCounter}" checked>
                                <label for="apply-all-${couponCounter}">Apply to all ticket types</label>
                            </div>
                            <div class="limitation-option">
