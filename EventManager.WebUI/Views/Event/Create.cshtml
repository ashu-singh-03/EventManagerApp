            // Add event listener for waiting list toggle
            const waitingListToggle = ticketCard.querySelector('.waiting-list-toggle-input');
            const waitingListContent = ticketCard.querySelector('.waiting-list-content');

            waitingListToggle.addEventListener('change', function() {
                if (this.checked) {
                    waitingListContent.classList.add('active');
                } else {
                    waitingListContent.classList.remove('active');
                }
            });

            // Add event listener for time slots toggle
            const timeSlotsToggle = ticketCard.querySelector('.time-slots-toggle-input');
            const timeSlotsContent = ticketCard.querySelector('.time-slots-content');

            timeSlotsToggle.addEventListener('change', function() {
                if (this.checked) {
                    timeSlotsContent.classList.add('active');
                } else {
                    timeSlotsContent.classList.remove('active');
                }
            });

            // Add event listeners for booking type options
            const bookingTypeOptions = ticketCard.querySelectorAll('.booking-type-option');
            const approvalContent = ticketCard.querySelector('.booking-type-content');

            bookingTypeOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Update active state
                    bookingTypeOptions.forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');

                    // Check the radio input
                    const radioInput = this.querySelector('input');
                    radioInput.checked = true;

                    // Show/hide approval settings
                    if (this.dataset.bookingType === 'approval') {
                        approvalContent.classList.add('active');
                    } else {
                        approvalContent.classList.remove('active');
                    }
                });
            });

            // Add event listeners for capacity options
            const capacityOptions = ticketCard.querySelectorAll('.capacity-option');
            const capacityLimited = ticketCard.querySelector('.capacity-limited');

            capacityOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Update active state
                    capacityOptions.forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');

                    // Check the radio input
                    const radioInput = this.querySelector('input');
                    radioInput.checked = true;

                    // Show/hide limited capacity fields
                    if (this.dataset.capacity === 'limited') {
                        capacityLimited.classList.add('active');
                    } else {
                        capacityLimited.classList.remove('active');
                    }
                });
            });

