<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventManagerApp</title>

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/event.css" />

    <style>
        :root {
            --primary-yellow: #ffc107;
            --primary-dark: #2c3e50;
            --secondary-bg: #f5f7fa;
            --text-dark: #212529;
            --sidebar-width: 280px;
            --sidebar-collapsed-width: 60px;
        }

        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: var(--secondary-bg) !important;
            overflow-x: hidden;
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1040;
            background-color: var(--primary-yellow);
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .navbar-brand, .navbar .nav-link {
                color: var(--text-dark) !important;
                transition: color 0.3s;
                font-weight: 600;
            }

                .navbar .nav-link:hover {
                    color: var(--primary-dark) !important;
                }

        .sidebar-toggle-btn {
            background: none;
            border: none;
            color: var(--text-dark);
            font-size: 1.2rem;
            cursor: pointer;
            padding: 5px 10px;
            display: none;
        }

        .layout-wrapper {
            display: flex;
            width: 100%;
            min-height: calc(100vh - 56px);
            position: relative;
        }

        .sidebar {
            width: var(--sidebar-width);
            min-width: var(--sidebar-width);
            background-color: #ffffff;
            padding: 20px 0;
            box-shadow: 2px 0 10px rgba(0,0,0,0.05);
            height: calc(100vh - 56px);
            overflow-y: auto;
            overflow-x: hidden;
            transition: all 0.3s ease;
            position: fixed;
            left: 0;
            top: 56px;
            z-index: 1035;
        }

            .sidebar.collapsed {
                width: var(--sidebar-collapsed-width);
                min-width: var(--sidebar-collapsed-width);
            }

        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 56px;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0,0,0,0.5);
            z-index: 1030;
        }

        .menu-section {
            padding: 0 15px;
            margin-bottom: 25px;
            transition: all 0.3s ease;
        }

        .sidebar.collapsed .menu-section {
            padding: 0 10px;
        }

        .menu-title {
            font-weight: 700;
            color: #a0a0a0;
            margin-bottom: 10px;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            white-space: nowrap;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .sidebar.collapsed .menu-title {
            opacity: 0;
            height: 0;
            margin: 0;
            padding: 0;
        }

        .menu-itemlocal {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            border-radius: 8px;
            text-decoration: none;
            color: var(--text-dark);
            margin-bottom: 5px;
            cursor: pointer;
            transition: all 0.3s;
            white-space: nowrap;
            overflow: hidden;
        }

        .sidebar.collapsed .menu-itemlocal {
            padding: 12px 5px;
            justify-content: center;
        }

        .menu-itemlocal:hover {
            background-color: rgba(255, 193, 7, 0.1);
            color: var(--text-dark) !important;
            font-weight: 600;
        }

        .menu-itemlocal.active {
            background-color: var(--primary-yellow);
            color: var(--text-dark) !important;
            font-weight: 700;
            border-left: none;
        }

        .menu-icon {
            margin-right: 15px;
            font-size: 1.1rem;
            min-width: 20px;
            text-align: center;
        }

        .sidebar.collapsed .menu-icon {
            margin-right: 0;
        }

        .menu-text {
            transition: all 0.3s ease;
        }

        .sidebar.collapsed .menu-text {
            display: none;
        }

        .menu-badge {
            background-color: #0d6efd;
            color: white;
            border-radius: 12px;
            padding: 2px 8px;
            font-size: 0.75rem;
            margin-left: auto;
        }

        .sidebar.collapsed .menu-badge {
            display: none;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
            margin-left: var(--sidebar-width);
            transition: all 0.3s ease;
            min-height: calc(100vh - 56px);
        }

        .sidebar.collapsed ~ .main-content {
            margin-left: var(--sidebar-collapsed-width);
        }

        /* When sidebar is hidden, adjust main content */
        .no-sidebar .main-content {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Error messages for validation */
        label.error {
            color: red;
            font-size: 0.875rem;
            margin-top: 5px;
            display: block;
        }

        input.error, textarea.error {
            border-color: red;
            color: #000;
            background-color: #fff;
        }

        /* DataTables custom styling */
        .dataTables_wrapper {
            padding: 20px 0;
        }

        .dataTables_filter input {
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 6px 12px;
        }

        .dataTables_length select {
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 6px 12px;
        }

        /* Responsive Styles */
        @@media (max-width: 992px) {
            .sidebar-toggle-btn {
                display: block;
            }

            .sidebar {
                transform: translateX(-100%);
                z-index: 1040;
            }

                .sidebar.show {
                    transform: translateX(0);
                }

            .main-content {
                margin-left: 0 !important;
                width: 100%;
            }

            .sidebar-overlay.show {
                display: block;
            }
        }

        @@media (max-width: 768px) {
            .main-content {
                padding: 15px;
            }

            .navbar .nav-link span {
                display: none;
            }

            .navbar .nav-link i {
                margin-right: 0;
            }
        }

        @@media (max-width: 576px) {
            .main-content {
                padding: 10px;
            }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg w-100">
        <div class="w-100 d-flex justify-content-between align-items-center px-4">
            <button class="sidebar-toggle-btn" id="sidebarToggle">
                <i class="fa-solid fa-bars"></i>
            </button>

            <a class="navbar-brand fw-bold fs-4 mx-auto mx-lg-0" href="@Url.Action("Index", "Home")">EventManagerApp</a>

            <div class="d-flex align-items-center">
                <a class="nav-link" asp-controller="Event" asp-action="Index">
                    <i class="fa-solid fa-house me-1"></i> <span class="d-none d-lg-inline">Home</span>
                </a>
                <a class="nav-link ms-3" href="#">
                    <i class="fa-solid fa-bell me-1"></i> <span class="d-none d-lg-inline">Notifications</span>
                </a>
                <a class="nav-link ms-3" href="#">
                    <i class="fa-solid fa-user me-1"></i> <span class="d-none d-lg-inline">Admin Profile</span>
                </a>
            </div>
        </div>
    </nav>

    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString().ToLower();
        var action = ViewContext.RouteData.Values["action"]?.ToString().ToLower();
        bool showSidebar = (controller != "event");
        var bodyClass = showSidebar ? "" : "no-sidebar";
    }

    <div class="layout-wrapper @bodyClass">

        @if (showSidebar)
        {
            <div class="sidebar-overlay" id="sidebarOverlay"></div>

            <aside class="sidebar" id="sidebar">
                <div class="menu-section">
                    <div class="menu-title">Participants Management</div>

                    <a class="menu-itemlocal @(controller == "participant" && action == "index" ? "active" : "")"
                       href="@Url.Action("Index", "Participant")">
                        <i class="fa-solid fa-user-plus menu-icon"></i>
                        <span class="menu-text">Add Participant</span>
                    </a>

                    <a class="menu-itemlocal @(controller == "accesspoint" ? "active" : "")"
                       href="@Url.Action("Index", "AccessPoint")">
                        <i class="fa-solid fa-door-open menu-icon"></i>
                        <span class="menu-text">Access Points</span>
                    </a>
                    <a class="menu-itemlocal @(controller == "ticketaccesspoint" ? "active" : "")"
                       href="@Url.Action("Index", "TicketAccessPoint")">
                        <i class="fa-solid fa-door-open menu-icon"></i>
                        <span class="menu-text">Assign Access Point</span>
                    </a>
                </div>

                <div class="menu-section">
                    <div class="menu-title">Settings</div>
                    <a class="menu-itemlocal @(controller == "settings" ? "active" : "")"
                       href="@Url.Action("Index", "Settings")">
                        <i class="fa-solid fa-gear menu-icon"></i>
                        <span class="menu-text">App Settings</span>
                    </a>
                </div>
            </aside>
        }

        <main role="main" class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts (MUST BE IN THIS ORDER) -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS (MUST come after jQuery) -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.colVis.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

    <script>
        $(document).ready(function() {
            const sidebar = $('#sidebar');
            const sidebarToggle = $('#sidebarToggle');
            const sidebarOverlay = $('#sidebarOverlay');
            const mainContent = $('.main-content');

            let isCollapsed = false;

            // Toggle sidebar on button click
            sidebarToggle.on('click', function() {
                if ($(window).width() <= 992) {
                    // Mobile: slide in/out
                    sidebar.toggleClass('show');
                    sidebarOverlay.toggleClass('show');
                } else {
                    // Desktop: collapse/expand
                    isCollapsed = !isCollapsed;
                    if (isCollapsed) {
                        sidebar.addClass('collapsed');
                        mainContent.css('margin-left', '60px');
                    } else {
                        sidebar.removeClass('collapsed');
                        mainContent.css('margin-left', '280px');
                    }
                }
            });

            // Close sidebar when clicking overlay
            sidebarOverlay.on('click', function() {
                sidebar.removeClass('show');
                sidebarOverlay.removeClass('show');
            });

            // Close sidebar when clicking outside on mobile
            $(document).on('click', function(event) {
                if ($(window).width() <= 992) {
                    if (!$(event.target).closest('#sidebar').length &&
                        !$(event.target).closest('#sidebarToggle').length) {
                        sidebar.removeClass('show');
                        sidebarOverlay.removeClass('show');
                    }
                }
            });

            // Handle window resize
            $(window).on('resize', function() {
                if ($(window).width() > 992) {
                    // On desktop, ensure sidebar is visible
                    sidebar.removeClass('show');
                    sidebarOverlay.removeClass('show');

                    // Reset collapsed state on resize
                    if (isCollapsed) {
                        sidebar.addClass('collapsed');
                        mainContent.css('margin-left', '60px');
                    } else {
                        sidebar.removeClass('collapsed');
                        mainContent.css('margin-left', '280px');
                    }
                } else {
                    // On mobile, reset collapsed state
                    sidebar.removeClass('collapsed');
                    mainContent.css('margin-left', '0');
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>