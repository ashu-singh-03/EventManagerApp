<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventManagerApp</title>

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/event.css" />

    <style>
        :root {
            --primary-yellow: #ffc107;
            --primary-dark: #2c3e50;
            --secondary-bg: #f5f7fa;
            --text-dark: #212529;
            --sidebar-width: 280px;
        }

        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: var(--secondary-bg) !important;
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1030;
            background-color: var(--primary-yellow);
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .navbar-brand, .navbar .nav-link {
                color: var(--text-dark) !important;
                transition: color 0.3s;
                font-weight: 600;
            }

                .navbar .nav-link:hover {
                    color: var(--primary-dark) !important;
                }

        .layout-wrapper {
            display: flex;
            gap: 0;
            width: 100%;
            flex-grow: 1;
        }

        .sidebar {
            width: var(--sidebar-width);
            min-width: var(--sidebar-width);
            background-color: #ffffff;
            padding: 20px 0;
            box-shadow: 2px 0 10px rgba(0,0,0,0.05);
            position: sticky;
            top: 56px;
            height: calc(100vh - 56px);
            overflow-y: auto;
        }

        .menu-section {
            padding: 0 15px;
            margin-bottom: 25px;
        }

        .menu-title {
            font-weight: 700;
            color: #a0a0a0;
            margin-bottom: 10px;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .menu-itemlocal {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            border-radius: 8px;
            text-decoration: none;
            color: var(--text-dark);
            margin-bottom: 5px;
            cursor: pointer;
            transition: all 0.3s;
        }

            .menu-itemlocal:hover {
                background-color: rgba(255, 193, 7, 0.1);
                color: var(--text-dark) !important;
                font-weight: 600;
            }

            .menu-itemlocal.active {
                background-color: var(--primary-yellow);
                color: var(--text-dark) !important;
                font-weight: 700;
                border-left: none;
            }

        .menu-icon {
            margin-right: 15px;
            font-size: 1.1rem;
        }

        .menu-badge {
            background-color: #0d6efd;
            color: white;
            border-radius: 12px;
            padding: 2px 8px;
            font-size: 0.75rem;
            margin-left: auto;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
        }

        /* Error messages for validation */
        label.error {
            color: red;
            font-size: 0.875rem;
            margin-top: 5px;
            display: block;
        }

        input.error, textarea.error {
            border-color: red; /* optional */
            color: #000; /* keep text black */
            background-color: #fff;
        }

        /* When sidebar is hidden, adjust main content */
        .no-sidebar .main-content {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* DataTables custom styling */
        .dataTables_wrapper {
            padding: 20px 0;
        }

        .dataTables_filter input {
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 6px 12px;
        }

        .dataTables_length select {
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 6px 12px;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg w-100">
        <div class="w-100 d-flex justify-content-between align-items-center px-4">
            <a class="navbar-brand fw-bold fs-4" href="@Url.Action("Index", "Home")">EventManagerApp</a>

            <div class="d-flex align-items-center">
                <a class="nav-link" asp-controller="Event" asp-action="Index">
                    <i class="fa-solid fa-house me-1"></i> Home
                </a>
                <a class="nav-link ms-3" href="#">
                    <i class="fa-solid fa-bell me-1"></i> Notifications
                </a>
                <a class="nav-link ms-3" href="#">
                    <i class="fa-solid fa-user me-1"></i> Admin Profile
                </a>
            </div>
        </div>
    </nav>

    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString().ToLower();
        var action = ViewContext.RouteData.Values["action"]?.ToString().ToLower();
        // Check if the current page is 'Event' or a page where sidebar should be hidden
        bool showSidebar = (controller != "event");
        var bodyClass = showSidebar ? "" : "no-sidebar";
    }

    <div class="layout-wrapper @bodyClass">

        @if (showSidebar)
        {
            <aside class="sidebar">
                <div class="menu-section">
                    <div class="menu-title">Participants Management</div>

                    <a class="menu-itemlocal @(controller == "participant" && action == "index" ? "active" : "")"
                       href="@Url.Action("Index", "Participant")">
                        <i class="fa-solid fa-user-plus menu-icon"></i>
                        <span>Add Participant</span>
                    </a>

                    <a class="menu-itemlocal @(controller == "accesspoint" ? "active" : "")"
                       href="@Url.Action("Index", "AccessPoint")">
                        <i class="fa-solid fa-door-open menu-icon"></i>
                        <span>Access Points</span>
                    </a>
                    <a class="menu-itemlocal @(controller == "ticketaccesspoint" ? "active" : "")"
                       href="@Url.Action("Index", "TicketAccessPoint")">
                        <i class="fa-solid fa-door-open menu-icon"></i>
                        <span>Assign Access Point</span>
                    </a>
                </div>

                <div class="menu-section">
                    <div class="menu-title">Settings</div>
                    <a class="menu-itemlocal @(controller == "settings" ? "active" : "")"
                       href="@Url.Action("Index", "Settings")">
                        <i class="fa-solid fa-gear menu-icon"></i>
                        <span>App Settings</span>
                    </a>
                </div>
            </aside>
        }

        <main role="main" class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts (MUST BE IN THIS ORDER) -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS (MUST come after jQuery) -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.colVis.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>