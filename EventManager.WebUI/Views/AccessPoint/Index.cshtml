@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Access Point Management";
}

<style>
    :root {
        --primary: #FFC107;
        --primary-dark: #FFA000;
        --primary-light: #FFECB3;
        --secondary: #212121;
        --light: #FFFDE7;
        --dark: #212121;
        --gray: #757575;
        --light-gray: #F5F5F5;
        --border: #E0E0E0;
        --danger: #D32F2F;
        --success: #388E3C;
        --warning: #F57C00;
        --info: #1976D2;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        background-color: var(--light);
        color: var(--dark);
        line-height: 1.6;
        font-size: 14px;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 15px;
    }

    /* ALERT STYLES - PROFESSIONAL */
    .alert-area {
        position: fixed;
        top: 20px;
        right: 20px;
        width: 400px;
        z-index: 9999;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .alert {
        border-radius: 10px;
        padding: 18px 20px;
        border: 1px solid transparent;
        display: flex;
        align-items: flex-start;
        animation: slideInRight 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        backdrop-filter: blur(10px);
        transition: transform 0.3s ease, opacity 0.3s ease;
    }

        .alert:hover {
            transform: translateX(-5px);
        }

    .alert-success {
        background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
        border-color: #b1d8b7;
        color: #155724;
        border-left: 5px solid #28a745;
    }

    .alert-danger {
        background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
        border-color: #f1b0b7;
        color: #721c24;
        border-left: 5px solid #dc3545;
    }

    .alert-warning {
        background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
        border-color: #ffe8a1;
        color: #856404;
        border-left: 5px solid #ffc107;
    }

    .alert-icon {
        font-size: 24px;
        margin-right: 15px;
        margin-top: 2px;
        flex-shrink: 0;
    }

    .alert-content {
        flex: 1;
        min-width: 0;
    }

    .alert-title {
        font-weight: 700;
        font-size: 16px;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .alert-message {
        font-size: 14px;
        line-height: 1.5;
        margin-bottom: 8px;
    }

    .alert-stats {
        display: flex;
        gap: 10px;
        margin-bottom: 12px;
        flex-wrap: wrap;
    }

    .stat-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .stat-success {
        background-color: rgba(40, 167, 69, 0.15);
        color: #155724;
    }

    .stat-secondary {
        background-color: rgba(108, 117, 125, 0.15);
        color: #383d41;
    }

    .stat-danger {
        background-color: rgba(220, 53, 69, 0.15);
        color: #721c24;
    }

    .btn-close-alert {
        background: none;
        border: none;
        color: inherit;
        opacity: 0.7;
        cursor: pointer;
        font-size: 18px;
        padding: 0;
        margin-left: 10px;
        transition: opacity 0.3s ease;
    }

        .btn-close-alert:hover {
            opacity: 1;
        }

    @@keyframes slideInRight {
        from {
            transform: translateX(100%);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @@keyframes fadeOut {
        from {
            opacity: 1;
        }

        to {
            opacity: 0;
        }
    }

    /* REST OF YOUR EXISTING STYLES */
    header {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: var(--dark);
        padding: 15px 0;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .menu-bar {
        display: flex;
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 20px;
        box-shadow: 0 1px 5px rgba(0, 0, 0, 0.05);
    }

    .menu-itemlocal {
        flex: 1;
        text-align: center;
        padding: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 600;
        color: var(--gray);
        font-size: 0.9rem;
        border-right: 1px solid var(--border);
    }

        .menu-itemlocal:last-child {
            border-right: none;
        }

        .menu-itemlocal.active {
            background-color: var(--primary);
            color: var(--dark);
        }

        .menu-itemlocal:hover:not(.active) {
            background-color: var(--primary-light);
        }

    .content-section {
        display: none;
        background-color: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 1px 5px rgba(0,0,0,0.05);
        margin-bottom: 20px;
        min-height: 600px;
    }

        .content-section.active {
            display: block;
        }

    .table-container {
        overflow-x: auto;
        border-radius: 8px;
        box-shadow: 0 1px 5px rgba(0,0,0,0.05);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
        font-size: 0.85rem;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid var(--border);
    }

    th {
        background-color: var(--light-gray);
        font-weight: 600;
        color: var(--dark);
    }

    tr:hover {
        background-color: var(--primary-light);
    }

    .btn {
        padding: 10px 18px;
        border: none;
        border-radius: 5px;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: var(--primary);
        color: var(--dark);
    }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(255, 160, 0, 0.3);
        }

    .btn-secondary {
        background-color: var(--light-gray);
        color: var(--dark);
    }

        .btn-secondary:hover {
            background-color: var(--border);
        }

    .btn-danger {
        background-color: var(--danger);
        color: white;
    }

    .btn-warning {
        background-color: var(--warning);
        color: white;
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 0.8rem;
    }

    .form-row {
        display: flex;
        gap: 15px;
        margin-bottom: 15px;
    }

    .form-col {
        flex: 1;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: var(--dark);
        font-size: 0.9rem;
    }

    .required::after {
        content: ' *';
        color: var(--danger);
    }

    input, select, textarea {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid var(--border);
        border-radius: 5px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

        input:focus, select:focus, textarea:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 2px rgba(255, 193, 7, 0.2);
        }

    .action-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid var(--border);
    }

    .section-title {
        font-size: 1.2rem;
        margin-bottom: 15px;
        color: var(--dark);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* DataTable specific styles */
    #accessPointsTable_wrapper .dataTables_scrollBody {
        max-height: 400px !important;
        min-height: 200px !important;
    }

    .dataTables_wrapper {
        margin: 10px 0;
    }

    .dataTables_length,
    .dataTables_filter {
        margin-bottom: 10px;
    }

    .dataTables_info {
        margin-top: 10px;
    }

    .dataTables_paginate {
        margin-top: 10px;
    }

    table.dataTable {
        margin-top: 0 !important;
        margin-bottom: 10px !important;
        font-size: 0.85rem;
    }

    .dataTables_processing {
        background-color: rgba(255, 193, 7, 0.8) !important;
        color: #212121 !important;
        border-radius: 8px !important;
        padding: 20px !important;
        font-weight: bold !important;
        border: none !important;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1) !important;
    }

    /* Ensure table header stays visible */
    #accessPointsTable thead th {
        position: sticky;
        top: 0;
        background-color: var(--light-gray);
        z-index: 10;
    }

    /* Style for DataTable buttons and controls */
    .dataTables_filter input {
        padding: 8px 12px;
        border: 1px solid var(--border);
        border-radius: 5px;
        width: 200px;
    }

    .dataTables_length select {
        padding: 6px 12px;
        border: 1px solid var(--border);
        border-radius: 5px;
    }

    .paginate_button {
        padding: 6px 12px !important;
        margin: 0 2px !important;
        border: 1px solid var(--border) !important;
        border-radius: 4px !important;
    }

        .paginate_button.current {
            background-color: var(--primary) !important;
            color: var(--dark) !important;
            border-color: var(--primary-dark) !important;
        }

        .paginate_button:hover {
            background-color: var(--primary-light) !important;
            color: var(--dark) !important;
        }

    /* Make sure action buttons don't wrap */
    #accessPointsTable td:last-child {
        white-space: nowrap;
    }

    /* Status badge styles */
    .status-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .status-active {
        background-color: rgba(40, 167, 69, 0.15);
        color: #155724;
    }

    .status-inactive {
        background-color: rgba(108, 117, 125, 0.15);
        color: #383d41;
    }

    .form-card {
        background-color: white;
        border-radius: 8px;
        padding: 25px;
        box-shadow: 0 1px 5px rgba(0,0,0,0.05);
        margin-bottom: 20px;
    }

        .form-card h3 {
            margin-bottom: 20px;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .form-card h3 i {
                color: var(--primary-dark);
            }

    .empty-state {
        text-align: center;
        padding: 40px 20px;
        color: var(--gray);
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 15px;
            color: var(--light-gray);
        }

        .empty-state p {
            font-size: 1rem;
        }
    label.required::after {
        content: ' *';
        color: var(--danger);
    }

    label:has(input[required]), label:has(textarea[required]), label:has(select[required]) {
        position: relative;
    }

        label:has(input[required])::after,
        label:has(textarea[required])::after,
        label:has(select[required])::after {
            content: ' *';
            color: var(--danger);
            margin-left: 2px;
        }

</style>

<div class="container-fluid">
    <div class="card">
        <div class="card-body p-4 p-lg-5">

            <!-- Global Alert Area -->
            <div class="alert-area"></div>

            <!-- Menu Tabs -->
            <div class="menu-bar">
                <div class="menu-itemlocal active" data-section="manage-access-points">Create Access Point</div>
                <div class="menu-itemlocal" data-section="access-points-list">Access Points List</div>
            </div>

            <!-- Create Access Point Section -->
            <div class="content-section active" id="manage-access-points">
                <div class="action-bar">
                    <h2 class="section-title"><i class="fas fa-door-open"></i> Create New Access Point</h2>
                </div>

                <div class="form-card">
                    <h3><i class="fas fa-info-circle"></i> Access Point Details</h3>
                    <form id="accessPointForm">
                        <div class="form-row">
                            <div class="form-col">
                                <label for="accessPointName" class="required">Access Point Name</label>
                                <input type="text" id="accessPointName" name="Name" required
                                       placeholder="e.g., Main Entrance, Conference Room, Parking Gate">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-col">
                                <label for="accessPointDescription">Description</label>
                                <textarea id="accessPointDescription" name="Description" rows="3"
                                          placeholder="Describe this access point location, purpose, or any special instructions..."></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" id="saveAccessPointBtn">
                                <i class="fas fa-save"></i> Save Access Point
                            </button>
                            <button type="reset" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Reset Form
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Access Points List Section -->
            <div class="content-section" id="access-points-list">
                <div class="action-bar">
                    <h2 class="section-title"><i class="fas fa-list"></i> Access Points List</h2>
                </div>

                <div class="table-container" id="accessPointsTableContainer">
                    <table class="table display nowrap" id="accessPointsTable" style="width:100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Data will be loaded dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        // Initialize DataTable
        let accessPointsDataTable = null;
        let isDataTableInitialized = false;

        // Initialize DataTable
        function initializeAccessPointsDataTable() {
            if ($.fn.DataTable.isDataTable('#accessPointsTable')) {
                accessPointsDataTable.destroy();
                $('#accessPointsTable tbody').empty();
            }

            accessPointsDataTable = $('#accessPointsTable').DataTable({
                paging: true,
                pageLength: 10,
                searching: true,
                ordering: true,
                info: true,
                responsive: true
            });

            isDataTableInitialized = true; // Fix: set flag true
        }

        // Toast function
        function showToast(message, type = 'success') {
            const alertId = 'alert-' + Date.now();
            const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-triangle';
            const title = type === 'success' ? 'Success!' : 'Error!';

            const toastHtml = `
                <div id="${alertId}" class="alert alert-${type}">
                    <i class="fas ${icon} alert-icon"></i>
                    <div class="alert-content">
                        <div class="alert-title">
                            <span>${title}</span>
                            <button class="btn-close-alert" onclick="closeAlert('${alertId}')">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <div class="alert-message">${message}</div>
                    </div>
                </div>`;
            $('.alert-area').append(toastHtml);

            setTimeout(() => closeAlert(alertId), 5000);
        }

        // Close alert
        window.closeAlert = function(alertId) {
            $('#' + alertId).fadeOut(500, function() { $(this).remove(); });
        };

        // Tab switching
        $('.menu-itemlocal').click(function () {
            $('.menu-itemlocal').removeClass('active');
            $(this).addClass('active');
            $('.content-section').removeClass('active');
            $('#' + $(this).data('section')).addClass('active');

            if ($(this).data('section') === 'access-points-list') {
                if (!isDataTableInitialized || !$.fn.DataTable.isDataTable('#accessPointsTable')) {
                    initializeAccessPointsDataTable();
                }
                loadAccessPoints();
            } else if ($(this).data('section') === 'manage-access-points') {
                $('#accessPointForm')[0].reset();
                $('#accessPointForm').removeData('access-point-id');
                $('#saveAccessPointBtn').html('<i class="fas fa-save"></i> Save Access Point');
            }
        });

        // Form validation
        $('#accessPointForm').validate({
            rules: {
                Name: {
                    required: true,
                    minlength: 3,
                    maxlength: 100
                },
                Description: {
                    maxlength: 500
                }
            },
            messages: {
                Name: {
                    required: "Access Point Name is required",
                    minlength: "Access Point Name must be at least 3 characters",
                    maxlength: "Access Point Name cannot exceed 100 characters"
                },
                Description: {
                    maxlength: "Description cannot exceed 500 characters"
                }
            },
            errorClass: "text-danger",
            errorPlacement: (error, element) => error.insertAfter(element),
            highlight: (element) => $(element).addClass('is-invalid'),
            unhighlight: (element) => $(element).removeClass('is-invalid'),
            submitHandler: saveAccessPoint
        });

        // Save access point
        function saveAccessPoint() {
            const accessPointId = $('#accessPointForm').data('access-point-id') || 0;
            const isEdit = accessPointId > 0;

            const dto = {
                AccessPointId: accessPointId,
                Name: $('#accessPointName').val().trim(),
                Description: $('#accessPointDescription').val().trim()
            };

            const $btn = $('#saveAccessPointBtn');
            const originalHtml = $btn.html();
            const buttonText = isEdit ? 'Updating...' : 'Saving...';
            $btn.html(`<i class="fas fa-spinner fa-spin"></i> ${buttonText}`).prop('disabled', true);

            $.ajax({
                url: '@Url.Action("Save", "AccessPoint")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(dto),
                success: function (response) {
                    const msg = isEdit ? 'Access point updated successfully!' : 'Access point created successfully!';
                    showToast(response.message || msg, 'success');
                    $('#accessPointForm')[0].reset();
                    $('#accessPointForm').removeData('access-point-id');
                    const newButtonText = isEdit ? '<i class="fas fa-edit"></i> Update Access Point' : '<i class="fas fa-save"></i> Save Access Point';
                    $btn.html(newButtonText);
                    $('.menu-itemlocal[data-section="access-points-list"]').click();
                    loadAccessPoints();
                },
                error: function (xhr) {
                    let errorMsg = isEdit ? 'Error updating access point' : 'Error creating access point';
                    if (xhr.responseJSON?.error) errorMsg = xhr.responseJSON.error;
                    else if (xhr.responseJSON?.message) errorMsg = xhr.responseJSON.message;
                    showToast(errorMsg, 'danger');
                },
                complete: function () {
                    $btn.html('<i class="fas fa-save"></i> Save Access Point').prop('disabled', false);
                }
            });
        }

        // Load access points
        function loadAccessPoints() {
            if (accessPointsDataTable) {
                accessPointsDataTable.clear().draw();

                const loadingRow = accessPointsDataTable.row.add([
                    '<div class="text-center py-4"><i class="fas fa-spinner fa-spin fa-lg"></i> Loading access points...</div>',
                    '',
                    '',
                    ''
                ]).node();

                $(loadingRow).find('td:eq(0)').attr('colspan', '4').css('text-align', 'center');
                $(loadingRow).find('td').not(':eq(0)').hide();
                accessPointsDataTable.draw();
            }

            $.ajax({
                url: '@Url.Action("LoadAccessPoints", "AccessPoint")',
                type: 'GET',
                success: function (accessPoints) {
                    if (!isDataTableInitialized || !$.fn.DataTable.isDataTable('#accessPointsTable')) {
                        initializeAccessPointsDataTable();
                    }

                    accessPointsDataTable.clear();

                    accessPoints.forEach(ap => {
                        accessPointsDataTable.row.add([
                            escapeHtml(ap.name || ''),
                            escapeHtml(ap.description || ''),
                            `<span class="status-badge status-active">Active</span>`,
                            `
                            <button class="btn btn-warning btn-sm edit-btn" data-id="${ap.accessPointId}">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                            <button class="btn btn-danger btn-sm delete-btn" data-id="${ap.accessPointId}">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            `
                        ]);
                    });

                    accessPointsDataTable.draw();
                },
                error: function (xhr) {
                    showToast('Error loading access points', 'danger');
                    if (accessPointsDataTable) {
                        accessPointsDataTable.clear();
                        accessPointsDataTable.row.add([
                            '<div class="text-center py-4 text-danger"><i class="fas fa-exclamation-triangle fa-2x mb-2"></i><br>Error loading access points</div>',
                            '',
                            '',
                            ''
                        ]).draw();
                    }
                }
            });
        }

        // Edit access point
        $(document).on('click', '.edit-btn', function () {
            const accessPointId = $(this).data('id');
            const $btn = $(this);
            const originalText = $btn.html();

            $btn.html('<i class="fas fa-spinner fa-spin"></i>').prop('disabled', true);

            $.ajax({
                url: '@Url.Action("Details", "AccessPoint")',
                type: 'GET',
                data: { id: accessPointId },
                success: function (accessPoint) {
                    $('.menu-itemlocal[data-section="manage-access-points"]').click();
                    $('#accessPointName').val(accessPoint.name);
                    $('#accessPointDescription').val(accessPoint.description);
                    $('#accessPointForm').data('access-point-id', accessPoint.accessPointId);
                    $('#saveAccessPointBtn').html('<i class="fas fa-edit"></i> Update Access Point');

                    $('html, body').animate({
                        scrollTop: $('#manage-access-points').offset().top - 20
                    }, 500);
                },
                error: function () {
                    showToast('Error fetching access point details.', 'danger');
                },
                complete: function () {
                    $btn.html(originalText).prop('disabled', false);
                }
            });
        });

        // Delete access point
        $(document).on('click', '.delete-btn', function () {
            const accessPointId = $(this).data('id');
            const $deleteBtn = $(this);
            const accessPointName = $deleteBtn.closest('tr').find('td:eq(0)').text().trim(); // fixed index

            if (!confirm(`Are you sure you want to delete "${accessPointName}"? This action cannot be undone.`)) return;
            const originalText = $deleteBtn.html();
            $deleteBtn.html('<i class="fas fa-spinner fa-spin"></i>').prop('disabled', true);

            $.ajax({
                url: '@Url.Action("Delete", "AccessPoint")',
                type: 'POST',
                data: { id: accessPointId },
                success: function (response) {
                    showToast(response.message || 'Access point deleted successfully!', 'success');
                    loadAccessPoints();
                },
                error: function (xhr) {
                    let errorMessage = 'Error deleting access point';
                    if (xhr.responseJSON?.error) errorMessage = xhr.responseJSON.error;
                    else if (xhr.responseJSON?.message) errorMessage = xhr.responseJSON.message;
                    else if (xhr.responseText) errorMessage = xhr.responseText;

                    showToast(errorMessage, 'danger');
                },
                complete: function () {
                    $deleteBtn.html(originalText).prop('disabled', false);
                }
            });
        });

        // Refresh button
        $('#refreshAccessPointsBtn').click(function () {
            loadAccessPoints();
            showToast('Access points list refreshed', 'success');
        });

        // Escape HTML
        function escapeHtml(text) {
            if (!text) return '';
